<Application x:Class="VCenterMigrationTool.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
             xmlns:helpers="clr-namespace:VCenterMigrationTool.Helpers"
             DispatcherUnhandledException="OnDispatcherUnhandledException"
             Exit="OnExit"
             Startup="OnStartup">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ui:ThemesDictionary Theme="Dark" />
                <ui:ControlsDictionary />
            </ResourceDictionary.MergedDictionaries>
            <!-- Custom color overrides for dark theme -->
            <SolidColorBrush x:Key="TextFillColorPrimaryBrush" Color="#00BFFF" />
            <SolidColorBrush x:Key="TextFillColorSecondaryBrush" Color="#87CEEB" />

            <helpers:EnumToBooleanConverter x:Key="EnumToBooleanConverter" />
            <helpers:BoolToStringConverter x:Key="BoolToStringConverter" />
            <helpers:NullToBoolConverter x:Key="NullToBoolConverter" />
            <helpers:BoolToSymbolConverter x:Key="BoolToSymbolConverter" />
            <helpers:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter" />
            <helpers:EnumToVisibilityConverter x:Key="EnumToVisibilityConverter" />
            <helpers:EnumToIconConverter x:Key="EnumToIconConverter" />
            <helpers:BoolToParameterConverter x:Key="BoolToParameterConverter" />
            <helpers:NullToVisibilityConverter x:Key="NullToVisibilityConverter" />
        </ResourceDictionary>
    </Application.Resources>
</Application>