<?xml version="1.0" encoding="utf-8"?>
<Page x:Class="VCenterMigrationTool.Views.Pages.DashboardPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml" 
      xmlns:helpers="clr-namespace:VCenterMigrationTool.Helpers"
      mc:Ignorable="d"
      d:DesignHeight="700" d:DesignWidth="1200"
      ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
      ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
      Foreground="{DynamicResource TextFillColorPrimaryBrush}">

    <Page.Resources>
        <helpers:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter" />
        <helpers:NullToBooleanConverter x:Key="NullToBooleanConverter"/>
    </Page.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="vCenter Migration Dashboard" 
                      FontSize="28" 
                      FontWeight="SemiBold"/>
            <TextBlock Text="Manage your vCenter connections and monitor migration status" 
                      Opacity="0.7"
                      FontSize="14"
                      Margin="0,5,0,0"/>
        </StackPanel>

        <!-- Connection Cards -->
        <Grid Grid.Row="1" Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="20"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Source vCenter Card -->
            <ui:Card Grid.Column="0">
                <Grid Margin="20,15">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Card Header -->
                    <Grid Grid.Row="0" Margin="0,0,0,15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" Orientation="Horizontal">
                            <ui:SymbolIcon Symbol="Server24" Margin="0,0,10,0"/>
                            <TextBlock Text="Source vCenter" 
                                      FontSize="18" 
                                      FontWeight="SemiBold"
                                      VerticalAlignment="Center"/>
                        </StackPanel>

                        <!-- Disconnect Button -->
                        <ui:Button Grid.Column="1" 
                                  Content="Disconnect" 
                                  Command="{Binding ViewModel.DisconnectSourceCommand}"
                                  Appearance="Danger"
                                  FontSize="12"
                                  Padding="8,4"/>
                    </Grid>

                    <!-- Profile Selection -->
                    <ComboBox Grid.Row="1" 
                             ItemsSource="{Binding ViewModel.Profiles}"
                             SelectedItem="{Binding ViewModel.SelectedSourceProfile}"
                             DisplayMemberPath="Name"
                             Margin="0,0,0,10"/>

                    <!-- Connection Status -->
                    <Border Grid.Row="2" 
                           Background="{DynamicResource ControlFillColorDefaultBrush}"
                           BorderBrush="{DynamicResource ControlStrokeColorDefaultBrush}"
                           BorderThickness="1"
                           CornerRadius="4"
                           Padding="10,8"
                           Margin="0,0,0,10">
                        <TextBlock Text="{Binding ViewModel.SourceConnectionStatus}"
                                  VerticalAlignment="Center"
                                  TextTrimming="CharacterEllipsis"/>
                    </Border>

                    <!-- Connect Button -->
                    <ui:Button Grid.Row="3" 
                              Content="Connect" 
                              Command="{Binding ViewModel.ConnectSourceCommand}"
                              HorizontalAlignment="Stretch"
                              Appearance="Primary"
                              IsEnabled="{Binding ViewModel.SelectedSourceProfile, 
                               Converter={StaticResource NullToBooleanConverter}}"/>
                </Grid>
            </ui:Card>

            <!-- Target vCenter Card -->
            <ui:Card Grid.Column="2">
                <Grid Margin="20,15">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Card Header -->
                    <Grid Grid.Row="0" Margin="0,0,0,15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" Orientation="Horizontal">
                            <ui:SymbolIcon Symbol="ServerMultiple20" Margin="0,0,10,0"/>
                            <TextBlock Text="Target vCenter" 
                                      FontSize="18" 
                                      FontWeight="SemiBold"
                                      VerticalAlignment="Center"/>
                        </StackPanel>

                        <!-- Disconnect Button -->
                        <ui:Button Grid.Column="1" 
                                  Content="Disconnect" 
                                  Command="{Binding ViewModel.DisconnectTargetCommand}"
                                  Appearance="Danger"
                                  FontSize="12"
                                  Padding="8,4"/>
                    </Grid>

                    <!-- Profile Selection -->
                    <ComboBox Grid.Row="1" 
                             ItemsSource="{Binding ViewModel.Profiles}"
                             SelectedItem="{Binding ViewModel.SelectedTargetProfile}"
                             DisplayMemberPath="Name"
                             Margin="0,0,0,10"/>

                    <!-- Connection Status -->
                    <Border Grid.Row="2" 
                           Background="{DynamicResource ControlFillColorDefaultBrush}"
                           BorderBrush="{DynamicResource ControlStrokeColorDefaultBrush}"
                           BorderThickness="1"
                           CornerRadius="4"
                           Padding="10,8"
                           Margin="0,0,0,10">
                        <TextBlock Text="{Binding ViewModel.TargetConnectionStatus}"
                                  VerticalAlignment="Center"
                                  TextTrimming="CharacterEllipsis"/>
                    </Border>

                    <!-- Connect Button -->
                    <ui:Button Grid.Row="3" 
                              Content="Connect" 
                              Command="{Binding ViewModel.ConnectTargetCommand}"
                              HorizontalAlignment="Stretch"
                              Appearance="Primary"
                              IsEnabled="{Binding ViewModel.SelectedSourceProfile, 
                               Converter={StaticResource NullToBooleanConverter}}"/>
                </Grid>
            </ui:Card>
        </Grid>

        <!-- Script Output Section -->
        <ui:Card Grid.Row="2">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Header -->
                <Border Grid.Row="0" 
                       Background="{DynamicResource CardStrokeColorDefaultBrush}"
                       Padding="20,12">
                    <Grid>
                        <TextBlock Text="Output Console" 
                                  FontWeight="SemiBold"/>
                        <ui:Button Content="Run Test Job" 
                                  Command="{Binding ViewModel.RunTestJobCommand}"
                                  HorizontalAlignment="Right"
                                  Appearance="Secondary"
                                  Padding="10,5"/>
                    </Grid>
                </Border>

                <!-- Output -->
                <ScrollViewer Grid.Row="1" 
                             VerticalScrollBarVisibility="Auto"
                             Padding="20,15">
                    <TextBlock Text="{Binding ViewModel.ScriptOutput}"
                              FontFamily="Consolas"
                              FontSize="12"
                              TextWrapping="Wrap"/>
                </ScrollViewer>
            </Grid>
        </ui:Card>

        <!-- Status Bar -->
        <ui:Card Grid.Row="3" Margin="0,20,0,0">
            <Grid Margin="15,12">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <ui:SymbolIcon Symbol="Info24" 
                              Margin="0,0,12,0"
                              VerticalAlignment="Center"/>

                <TextBlock Grid.Column="1" 
                          Text="{Binding ViewModel.CurrentJobText}"
                          VerticalAlignment="Center"/>

                <ProgressBar Grid.Column="2" 
                               Value="{Binding ViewModel.JobProgress}"
                               Maximum="100"
                               Width="200"
                               Visibility="{Binding ViewModel.IsJobRunning, Converter={StaticResource BooleanToVisibilityConverter}}"/>
            </Grid>
        </ui:Card>
    </Grid>
</Page>