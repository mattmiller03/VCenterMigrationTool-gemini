<Page
    x:Class="VCenterMigrationTool.Views.Pages.DashboardPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:viewmodels="clr-namespace:VCenterMigrationTool.ViewModels"
    mc:Ignorable="d"
    d:DataContext="{d:DesignInstance viewmodels:DashboardViewModel, IsDesignTimeCreatable=False}"
    Title="DashboardPage"
    ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
    ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}">

    <Grid Margin="42">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" FontSize="24" FontWeight="Medium" Text="Dashboard &amp; Status" />

        <Grid Grid.Row="1" Margin="0,20,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="20" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <ui:CardControl Grid.Column="0">
                <StackPanel>
                    <TextBlock Text="Source vCenter" FontWeight="Medium" />
                    <Grid Margin="0,10,0,10">
                        <ComboBox
                            ItemsSource="{Binding ViewModel.Profiles}"
                            SelectedItem="{Binding ViewModel.SelectedSourceProfile}"
                            DisplayMemberPath="Name" />
                        <TextBlock x:Name="CB_SourceVC_textbox"
                            IsHitTestVisible="False"
                            Text="Select a source profile"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Left"
                            Margin="12,0,0,0"
                            Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                            Visibility="{Binding ViewModel.SelectedSourceProfile, Converter={StaticResource NullToVisibilityConverter}}" />
                    </Grid>
                    <TextBlock Text="{Binding ViewModel.SourceConnectionStatus}" Margin="0,0,0,10" Foreground="{DynamicResource TextFillColorSecondaryBrush}"/>
                    <ui:Button Content="Connect" Appearance="Primary" Command="{Binding ViewModel.ConnectSourceCommand}" />
                </StackPanel>
            </ui:CardControl>

            <ui:CardControl Grid.Column="2">
                <StackPanel>
                    <TextBlock Text="Target vCenter" FontWeight="Medium" />
                    <Grid Margin="0,10,0,10">
                        <ComboBox
                            ItemsSource="{Binding ViewModel.Profiles}"
                            SelectedItem="{Binding ViewModel.SelectedTargetProfile}"
                            DisplayMemberPath="Name" />
                        <TextBlock
                            IsHitTestVisible="False"
                            Text="Select a target profile"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Left"
                            Margin="12,0,0,0"
                            Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                            Visibility="{Binding ViewModel.SelectedTargetProfile, Converter={StaticResource NullToVisibilityConverter}}" />
                    </Grid>
                    <TextBlock Text="{Binding ViewModel.TargetConnectionStatus}" Margin="0,0,0,10" Foreground="{DynamicResource TextFillColorSecondaryBrush}"/>
                    <ui:Button Content="Connect" Command="{Binding ViewModel.ConnectTargetCommand}" />
                </StackPanel>
            </ui:CardControl>
        </Grid>

        <ui:CardControl Grid.Row="2" Margin="0,20,0,0">
            <StackPanel>
                <TextBlock FontSize="16" FontWeight="Medium" Text="Current Job Status" />
                <TextBlock Margin="0,5,0,10" Text="{Binding ViewModel.CurrentJobText}" Foreground="{DynamicResource TextFillColorSecondaryBrush}"/>

                <Grid Visibility="{Binding ViewModel.IsJobRunning, Converter={StaticResource BoolToVisibilityConverter}}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <ProgressBar Grid.Column="0" Value="{Binding ViewModel.JobProgress}" Maximum="100" />
                    <TextBlock Grid.Column="1" Margin="10,0,0,0" Text="{Binding ViewModel.JobProgress, StringFormat={}{0}%}" />
                </Grid>

                <ui:Button Margin="0,10,0,0" Content="Run Test Job" Command="{Binding ViewModel.RunTestJobCommand}" IsEnabled="{Binding ViewModel.IsJobRunning, Converter={StaticResource BoolToParameterConverter}, ConverterParameter=inverse}"/>
            </StackPanel>
        </ui:CardControl>

        <Grid Grid.Row="3" Margin="0,20,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <TextBlock Grid.Row="0" Text="Detailed Log Output" FontWeight="Medium"/>
            <ui:TextBox
                Grid.Row="1"
                Margin="0,10,0,0"
                Text="{Binding ViewModel.ScriptOutput, Mode=OneWay}"
                IsReadOnly="True"
                AcceptsReturn="True"
                VerticalScrollBarVisibility="Auto"
                FontFamily="Consolas"/>
        </Grid>
    </Grid>
</Page>