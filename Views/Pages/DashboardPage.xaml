<Page
    x:Class="VCenterMigrationTool.Views.Pages.DashboardPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:viewmodels="clr-namespace:VCenterMigrationTool.ViewModels"
    mc:Ignorable="d"
    d:DataContext="{d:DesignInstance viewmodels:DashboardViewModel, IsDesignTimeCreatable=False}"
    Title="DashboardPage"
    ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
    ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}">

    <Grid Margin="42">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" FontSize="24" FontWeight="Medium" Text="Dashboard &amp; Status" />

        <Grid Grid.Row="1" Margin="0,20,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="20" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <ui:CardControl Grid.Column="0">
                <StackPanel>
                    <TextBlock Text="Source vCenter" FontWeight="Medium" />
                    <Grid Margin="0,10,0,10">
                        <ComboBox
                            ItemsSource="{Binding ViewModel.Profiles}"
                            SelectedItem="{Binding ViewModel.SelectedSourceProfile}"
                            DisplayMemberPath="Name" Margin="-48,0,0,0" />
                        <TextBlock
                            IsHitTestVisible="False"
                            Text="Select a source profile"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Left"
                            Margin="12,0,0,0"
                            Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                            Visibility="{Binding ViewModel.SelectedSourceProfile, Converter={StaticResource NullToVisibilityConverter}}" />
                    </Grid>
                    <TextBlock Text="{Binding ViewModel.SourceConnectionStatus}" Margin="0,0,0,10" Foreground="{DynamicResource TextFillColorSecondaryBrush}"/>
                    <ui:Button Content="Connect" Appearance="Primary" Command="{Binding ViewModel.ConnectSourceCommand}" />
                </StackPanel>
            </ui:CardControl>

            <ui:CardControl Grid.Column="2">
                <StackPanel>
                    <TextBlock Text="Target vCenter" FontWeight="Medium" />
                    <Grid Margin="0,10,0,10">
                        <ComboBox
                            ItemsSource="{Binding ViewModel.Profiles}"
                            SelectedItem="{Binding ViewModel.SelectedTargetProfile}"
                            DisplayMemberPath="Name" Margin="-47,0,0,0" />
                        <TextBlock
                            IsHitTestVisible="False"
                            Text="Select a target profile"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Left"
                            Margin="12,0,0,0"
                            Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                            Visibility="{Binding ViewModel.SelectedTargetProfile, Converter={StaticResource NullToVisibilityConverter}}" />
                    </Grid>
                    <TextBlock Text="{Binding ViewModel.TargetConnectionStatus}" Margin="0,0,0,10" Foreground="{DynamicResource TextFillColorSecondaryBrush}"/>
                    <ui:Button Content="Connect" Command="{Binding ViewModel.ConnectTargetCommand}" />
                </StackPanel>
            </ui:CardControl>
        </Grid>

        <TextBlock Grid.Row="2" Margin="0,20,0,0" FontSize="20" FontWeight="Medium" Text="Export / Import vCenter Configuration" />

        <Grid Grid.Row="3">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,10,0,10">
                <ui:Button
                    Content="Export vDS &amp; Permissions"
                    Appearance="Primary"
                    Icon="ArrowUpload24"
                    Command="{Binding ViewModel.ExportConfigurationCommand}"/>
                <ui:Button
                    Content="Import vDS &amp; Permissions"
                    Appearance="Secondary"
                    Icon="ArrowDownload24"
                    Command="{Binding ViewModel.ImportConfigurationCommand}"
                    Margin="10,0,0,0"/>
                <ui:ProgressRing Margin="10,0,0,0" IsIndeterminate="True" Visibility="{Binding ViewModel.IsBusy, Converter={StaticResource BoolToVisibilityConverter}}"/>
            </StackPanel>

            <ui:TextBox
                Grid.Row="1"
                Text="{Binding ViewModel.ScriptOutput, Mode=OneWay}"
                IsReadOnly="True"
                AcceptsReturn="True"
                VerticalScrollBarVisibility="Auto"
                FontFamily="Consolas"/>
        </Grid>
    </Grid>
</Page>