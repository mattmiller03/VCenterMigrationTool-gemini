<Page
    x:Class="VCenterMigrationTool.Views.Pages.DashboardPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:viewmodels="clr-namespace:VCenterMigrationTool.ViewModels"
    xmlns:helpers="clr-namespace:VCenterMigrationTool.Helpers"
    mc:Ignorable="d"
    d:DataContext="{d:DesignInstance viewmodels:DashboardViewModel, IsDesignTimeCreatable=False}"
    Title="DashboardPage"
    ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
    ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}">

    <Page.Resources>
        <helpers:BoolToParameterConverter x:Key="BoolToParameterConverter" />
        <helpers:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter" />
    </Page.Resources>

    <Grid Margin="42">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" FontSize="24" FontWeight="Medium" Text="Dashboard &amp; Status" />

        <Grid Grid.Row="1" Margin="0,20,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="20" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <ui:CardControl Grid.Column="0">
                <StackPanel>
                    <TextBlock Text="Source vCenter" FontWeight="Medium" />
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,10,0,0">
                        <ComboBox
                            MinWidth="200"
                            ItemsSource="{Binding Profiles}"
                            SelectedItem="{Binding SelectedSourceProfile}"
                            DisplayMemberPath="Name"
                            IsEnabled="{Binding IsJobRunning, Converter={StaticResource BoolToParameterConverter}, ConverterParameter=inverse}"/>
                        <ui:Button
                            Margin="10,0,0,0"
                            Content="Connect"
                            Command="{Binding ConnectSourceCommand}"
                            IsEnabled="{Binding IsJobRunning, Converter={StaticResource BoolToParameterConverter}, ConverterParameter=inverse}"/>
                    </StackPanel>
                    <TextBlock Margin="0,10,0,0" Text="{Binding SourceConnectionStatus}" Foreground="{DynamicResource TextFillColorSecondaryBrush}"/>
                </StackPanel>
            </ui:CardControl>

            <ui:CardControl Grid.Column="2">
                <StackPanel>
                    <TextBlock Text="Target vCenter" FontWeight="Medium" />
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,10,0,0">
                        <ComboBox
                            MinWidth="200"
                            ItemsSource="{Binding Profiles}"
                            SelectedItem="{Binding SelectedTargetProfile}"
                            DisplayMemberPath="Name"
                            IsEnabled="{Binding IsJobRunning, Converter={StaticResource BoolToParameterConverter}, ConverterParameter=inverse}"/>
                        <ui:Button
                            Margin="10,0,0,0"
                            Content="Connect"
                            Command="{Binding ConnectTargetCommand}"
                            IsEnabled="{Binding IsJobRunning, Converter={StaticResource BoolToParameterConverter}, ConverterParameter=inverse}"/>
                    </StackPanel>
                    <TextBlock Margin="0,10,0,0" Text="{Binding TargetConnectionStatus}" Foreground="{DynamicResource TextFillColorSecondaryBrush}"/>
                </StackPanel>
            </ui:CardControl>
        </Grid>

        <ui:CardControl Grid.Row="2" Margin="0,20,0,0">
            <StackPanel>
                <TextBlock Text="Current Job Status" FontWeight="Medium" />
                <TextBlock Margin="0,5,0,0" Text="{Binding CurrentJobText}" Foreground="{DynamicResource TextFillColorSecondaryBrush}" />
                <Grid Margin="0,10,0,0" Visibility="{Binding IsJobRunning, Converter={StaticResource BoolToVisibilityConverter}}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <ProgressBar Grid.Column="0" Value="{Binding JobProgress}" Maximum="100" />
                    <TextBlock Grid.Column="1" Margin="10,0,0,0" Text="{Binding JobProgress, StringFormat={}{0}%}" />
                </Grid>
                <ui:Button Margin="0,10,0,0" Content="Run Test Job" Command="{Binding RunTestJobCommand}" IsEnabled="{Binding IsJobRunning, Converter={StaticResource BoolToParameterConverter}, ConverterParameter=inverse}"/>
            </StackPanel>
        </ui:CardControl>

        <Grid Grid.Row="3" Margin="0,20,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <TextBlock Grid.Row="0" Text="Detailed Log Output" FontWeight="Medium"/>
            <ui:TextBox
                Grid.Row="1"
                Margin="0,10,0,0"
                Text="{Binding ScriptOutput, Mode=OneWay}"
                IsReadOnly="True"
                AcceptsReturn="True"
                VerticalScrollBarVisibility="Auto"
                FontFamily="Consolas"/>
        </Grid>
    </Grid>
</Page>