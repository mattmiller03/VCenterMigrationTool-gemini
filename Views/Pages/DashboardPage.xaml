<?xml version="1.0" encoding="utf-8"?>
<Page x:Class="VCenterMigrationTool.Views.Pages.DashboardPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml" 
      xmlns:helpers="clr-namespace:VCenterMigrationTool.Helpers"
      mc:Ignorable="d"
      d:DesignHeight="700" d:DesignWidth="1200"
      ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
      ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
      Foreground="{DynamicResource TextFillColorPrimaryBrush}">

    <Page.Resources>
        <helpers:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter" />
        <helpers:NullToBooleanConverter x:Key="NullToBooleanConverter"/>
        <helpers:BoolToAppearanceConverter x:Key="BoolToAppearanceConverter"/>
    </Page.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="vCenter Migration Dashboard" 
                      FontSize="28" 
                      FontWeight="SemiBold"/>
            <TextBlock Text="Manage your vCenter connections and monitor migration status" 
                      Opacity="0.7"
                      FontSize="14"
                      Margin="0,5,0,0"/>
        </StackPanel>

        <!-- Connection Cards -->
        <Grid Grid.Row="1" Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="20"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Source vCenter Card -->
            <ui:Card Grid.Column="0">
                <Grid Margin="20,15">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Card Header -->
                    <Grid Grid.Row="0" Margin="0,0,0,15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" Orientation="Horizontal">
                            <ui:SymbolIcon Symbol="Server24" Margin="0,0,10,0"/>
                            <TextBlock Text="Source vCenter" 
                                      FontSize="18" 
                                      FontWeight="SemiBold"
                                      VerticalAlignment="Center"/>
                        </StackPanel>

                        <!-- Disconnect Button -->
                        <ui:Button Grid.Column="1" 
                                  Content="Disconnect" 
                                  Command="{Binding ViewModel.DisconnectSourceCommand}"
                                  Appearance="Danger"
                                  FontSize="12"
                                  Padding="8,4"
                                  IsEnabled="{Binding ViewModel.CanDisconnectSource}"/>
                    </Grid>

                    <!-- Profile Selection -->
                    <ComboBox Grid.Row="1" 
                             ItemsSource="{Binding ViewModel.Profiles}"
                             SelectedItem="{Binding ViewModel.SelectedSourceProfile}"
                             DisplayMemberPath="Name"
                             Margin="0,0,0,10"/>

                    <!-- Connection Status -->
                    <Border Grid.Row="2" 
                           Background="{Binding ViewModel.SourceConnectionBackgroundBrush}"
                           BorderBrush="{Binding ViewModel.SourceConnectionBorderBrush}"
                           BorderThickness="1"
                           CornerRadius="4"
                           Padding="10,8"
                           Margin="0,0,0,10">
                        <TextBlock Text="{Binding ViewModel.SourceConnectionStatus}"
                                  VerticalAlignment="Center"
                                  TextTrimming="CharacterEllipsis"
                                  Foreground="{Binding ViewModel.SourceConnectionTextBrush}"/>
                    </Border>

                    <!-- Connect Button -->
                    <ui:Button Grid.Row="3" 
                              Content="Connect" 
                              Command="{Binding ViewModel.ConnectSourceCommand}"
                              HorizontalAlignment="Stretch"
                              Appearance="Primary"
                              IsEnabled="{Binding ViewModel.CanConnectSource}"/>
                </Grid>
            </ui:Card>

            <!-- Target vCenter Card -->
            <ui:Card Grid.Column="2">
                <Grid Margin="20,15">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Card Header -->
                    <Grid Grid.Row="0" Margin="0,0,0,15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Column="0" Orientation="Horizontal">
                            <ui:SymbolIcon Symbol="ServerMultiple20" Margin="0,0,10,0"/>
                            <TextBlock Text="Target vCenter" 
                                      FontSize="18" 
                                      FontWeight="SemiBold"
                                      VerticalAlignment="Center"/>
                        </StackPanel>

                        <!-- Disconnect Button -->
                        <ui:Button Grid.Column="1" 
                                  Content="Disconnect" 
                                  Command="{Binding ViewModel.DisconnectTargetCommand}"
                                  Appearance="Danger"
                                  FontSize="12"
                                  Padding="8,4"
                                  IsEnabled="{Binding ViewModel.CanDisconnectTarget}"/>
                    </Grid>

                    <!-- Profile Selection -->
                    <ComboBox Grid.Row="1" 
                             ItemsSource="{Binding ViewModel.Profiles}"
                             SelectedItem="{Binding ViewModel.SelectedTargetProfile}"
                             DisplayMemberPath="Name"
                             Margin="0,0,0,10"/>

                    <!-- Connection Status -->
                    <Border Grid.Row="2" 
                           Background="{Binding ViewModel.TargetConnectionBackgroundBrush}"
                           BorderBrush="{Binding ViewModel.TargetConnectionBorderBrush}"
                           BorderThickness="1"
                           CornerRadius="4"
                           Padding="10,8"
                           Margin="0,0,0,10">
                        <TextBlock Text="{Binding ViewModel.TargetConnectionStatus}"
                                  VerticalAlignment="Center"
                                  TextTrimming="CharacterEllipsis"
                                  Foreground="{Binding ViewModel.TargetConnectionTextBrush}"/>
                    </Border>

                    <!-- Connect Button -->
                    <ui:Button Grid.Row="3" 
                              Content="Connect" 
                              Command="{Binding ViewModel.ConnectTargetCommand}"
                              HorizontalAlignment="Stretch"
                              Appearance="Primary"
                              IsEnabled="{Binding ViewModel.CanConnectTarget}"/>
                </Grid>
            </ui:Card>
        </Grid>

        <!-- Main Content Grid -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="20"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="20"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Inventory Summary Panel -->
            <ui:Card Grid.Column="0" Grid.ColumnSpan="3" Grid.Row="0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Header -->
                    <Border Grid.Row="0" 
                           Background="{DynamicResource CardStrokeColorDefaultBrush}"
                           Padding="20,12">
                        <Grid>
                            <StackPanel Orientation="Horizontal">
                                <ui:SymbolIcon Symbol="ChartMultiple24" Margin="0,0,10,0"/>
                                <TextBlock Text="Inventory Summary" 
                                          FontWeight="SemiBold"
                                          VerticalAlignment="Center"/>
                            </StackPanel>
                            <ui:Button Content="Refresh" 
                                      Command="{Binding ViewModel.RefreshInventoryCommand}"
                                      HorizontalAlignment="Right"
                                      Appearance="Secondary"
                                      Padding="10,5"/>
                        </Grid>
                    </Border>

                    <!-- Content -->
                    <ScrollViewer Grid.Row="1" 
                                 VerticalScrollBarVisibility="Auto"
                                 Padding="20,15">
                        <StackPanel>
                            <!-- Source Inventory -->
                            <Border Background="{DynamicResource ControlFillColorInputActiveBrush}"
                                   BorderBrush="{DynamicResource ControlStrokeColorSecondaryBrush}"
                                   BorderThickness="1"
                                   CornerRadius="6"
                                   Padding="15"
                                   Margin="0,0,0,15">
                                <StackPanel>
                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                                        <ui:SymbolIcon Symbol="Server24" 
                                                      Foreground="{DynamicResource AccentTextFillColorPrimaryBrush}"
                                                      Margin="0,0,8,0"/>
                                        <TextBlock Text="Source vCenter" 
                                                  FontWeight="SemiBold"
                                                  FontSize="14"/>
                                    </StackPanel>
                                    <TextBlock Text="{Binding ViewModel.SourceInventorySummary}"
                                              FontSize="12"
                                              TextWrapping="Wrap"
                                              Opacity="0.8"/>
                                </StackPanel>
                            </Border>

                            <!-- Target Inventory -->
                            <Border Background="{DynamicResource ControlFillColorInputActiveBrush}"
                                   BorderBrush="{DynamicResource ControlStrokeColorSecondaryBrush}"
                                   BorderThickness="1"
                                   CornerRadius="6"
                                   Padding="15">
                                <StackPanel>
                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                                        <ui:SymbolIcon Symbol="ServerMultiple20" 
                                                      Foreground="{DynamicResource AccentTextFillColorPrimaryBrush}"
                                                      Margin="0,0,8,0"/>
                                        <TextBlock Text="Target vCenter" 
                                                  FontWeight="SemiBold"
                                                  FontSize="14"/>
                                    </StackPanel>
                                    <TextBlock Text="{Binding ViewModel.TargetInventorySummary}"
                                              FontSize="12"
                                              TextWrapping="Wrap"
                                              Opacity="0.8"/>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </ScrollViewer>
                </Grid>
            </ui:Card>


            <!-- Activity Log Terminal Panel -->
            <ui:Card Grid.Column="0" Grid.ColumnSpan="3" Grid.Row="2" Margin="0,0,0,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="200"/>
                    </Grid.RowDefinitions>

                    <!-- Header -->
                    <Border Grid.Row="0" 
                           Background="{DynamicResource CardStrokeColorDefaultBrush}"
                           Padding="20,12">
                        <Grid>
                            <StackPanel Orientation="Horizontal">
                                <ui:SymbolIcon Symbol="WindowConsole20" Margin="0,0,10,0"/>
                                <TextBlock Text="Activity Log" 
                                          FontWeight="SemiBold"
                                          VerticalAlignment="Center"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                <ui:Button Content="Clear" 
                                          Command="{Binding ViewModel.ClearLogCommand}"
                                          Appearance="Secondary"
                                          Padding="8,4"
                                          FontSize="12"
                                          Margin="0,0,8,0"/>
                                <ui:Button Content="Auto Scroll" 
                                          Command="{Binding ViewModel.ToggleAutoScrollCommand}"
                                          Appearance="{Binding ViewModel.IsAutoScrollEnabled, Converter={StaticResource BoolToAppearanceConverter}}"
                                          Padding="8,4"
                                          FontSize="12"/>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- Terminal Content -->
                    <Border Grid.Row="1" 
                           Background="#1E1E1E"
                           BorderBrush="#404040"
                           BorderThickness="1,0,1,1">
                        <ScrollViewer x:Name="LogScrollViewer"
                                     VerticalScrollBarVisibility="Auto"
                                     HorizontalScrollBarVisibility="Auto"
                                     Padding="12">
                            <TextBlock x:Name="LogTextBlock"
                                      Text="{Binding ViewModel.ActivityLog}"
                                      FontFamily="Consolas, Courier New"
                                      FontSize="12"
                                      Foreground="#00FF00"
                                      Background="Transparent"
                                      TextWrapping="NoWrap"/>
                        </ScrollViewer>
                    </Border>
                </Grid>
            </ui:Card>
        </Grid>
    </Grid>
</Page>