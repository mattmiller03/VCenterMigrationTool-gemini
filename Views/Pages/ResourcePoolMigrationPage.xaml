<Page
    x:Class="VCenterMigrationTool.Views.Pages.ResourcePoolMigrationPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:viewmodels="clr-namespace:VCenterMigrationTool.ViewModels"
    xmlns:helpers="clr-namespace:VCenterMigrationTool.Helpers"
    mc:Ignorable="d"
    d:DataContext="{d:DesignInstance viewmodels:ResourcePoolMigrationViewModel, IsDesignTimeCreatable=False}"
    Title="ResourcePoolMigrationPage"
    ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
    ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}">

    <Page.Resources>
        <helpers:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter" />
        <helpers:InverseBooleanConverter x:Key="InverseBooleanConverter" />
        <helpers:InverseBooleanToVisibilityConverter x:Key="InverseBooleanToVisibilityConverter" />
    </Page.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto" 
                  HorizontalScrollBarVisibility="Disabled"
                  PanningMode="VerticalOnly"
                  CanContentScroll="True"
                  helpers:ScrollBehavior.FixMouseWheel="True">
        <Grid Margin="42">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="200" />
        </Grid.RowDefinitions>

        <!-- Page Title -->
        <TextBlock Grid.Row="0" FontSize="24" FontWeight="Medium" Text="Resource Pool Migration" />

        <!-- Load Data Section -->
        <ui:CardControl Grid.Row="1" Margin="0,20,0,0">
            <StackPanel>
                <TextBlock Text="Data Loading" FontWeight="Medium" />
                <TextBlock Margin="0,5,0,10" 
                          Text="Load source and target cluster information" 
                          Foreground="{DynamicResource TextFillColorSecondaryBrush}" />
                <StackPanel Orientation="Horizontal">
                    <ui:Button Content="Load Source Clusters" 
                              Command="{Binding LoadSourceClustersCommand}"
                              Icon="{ui:SymbolIcon CloudSync24}"
                              IsEnabled="{Binding IsLoadingData, Converter={StaticResource InverseBooleanConverter}}" />
                    <ui:Button Content="Load Target Clusters" 
                              Command="{Binding LoadTargetClustersCommand}"
                              Icon="{ui:SymbolIcon Server24}"
                              Margin="10,0,0,0"
                              IsEnabled="{Binding IsLoadingData, Converter={StaticResource InverseBooleanConverter}}" />
                    <ui:ProgressRing Width="24" Height="24" 
                                    Margin="15,0,0,0"
                                    Visibility="{Binding IsLoadingData, Converter={StaticResource BoolToVisibilityConverter}}" />
                    <TextBlock Text="{Binding OperationStatus}" 
                              Margin="10,0,0,0" 
                              VerticalAlignment="Center"
                              Foreground="{DynamicResource TextFillColorSecondaryBrush}" />
                </StackPanel>
            </StackPanel>
        </ui:CardControl>

        <!-- Main Content Area -->
        <Grid Grid.Row="2" Margin="0,20,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="20" />
                <ColumnDefinition Width="400" />
            </Grid.ColumnDefinitions>

            <!-- Source Resource Pools Section -->
            <ui:CardControl Grid.Column="0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="Source Resource Pools" FontWeight="Medium" />

                    <!-- Cluster Selection -->
                    <StackPanel Grid.Row="1" Margin="0,10,0,0">
                        <TextBlock Text="{Binding SelectedPoolNames.Count, StringFormat='Selected: {0} pools'}" 
                                  Margin="15,0,0,0" 
                                  VerticalAlignment="Center"
                                  Foreground="{DynamicResource TextFillColorSecondaryBrush}" />
                    </StackPanel>

                    <!-- Resource Pools List -->
                    <ScrollViewer Grid.Row="3" VerticalScrollBarVisibility="Auto">
                        <ItemsControl ItemsSource="{Binding SourceResourcePools}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="{DynamicResource ControlFillColorDefaultBrush}" 
                                           CornerRadius="4" 
                                           Padding="10"
                                           Margin="0,0,0,5">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto" />
                                                <ColumnDefinition Width="*" />
                                            </Grid.ColumnDefinitions>

                                            <CheckBox Grid.Column="0" 
                                                     IsChecked="{Binding IsSelected}"
                                                     Command="{Binding DataContext.TogglePoolSelectionCommand, RelativeSource={RelativeSource AncestorType=Page}}"
                                                     CommandParameter="{Binding}"
                                                     VerticalAlignment="Top"
                                                     Margin="0,0,10,0" />

                                            <StackPanel Grid.Column="1">
                                                <TextBlock Text="{Binding Name}" 
                                                          FontWeight="SemiBold" 
                                                          FontSize="14" />
                                                <TextBlock Text="{Binding VmInfo}" 
                                                          FontSize="12"
                                                          Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                                          Margin="0,2,0,0" />
                                                <TextBlock Text="{Binding ParentName, StringFormat='Parent: {0}'}" 
                                                          FontSize="11"
                                                          Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                                          Margin="0,2,0,0" />

                                                <!-- Expandable Details -->
                                                <Expander Header="Configuration Details" 
                                                         Margin="0,5,0,0"
                                                         IsExpanded="False">
                                                    <StackPanel Margin="0,5,0,0">
                                                        <TextBlock Text="{Binding CpuInfo, StringFormat='CPU: {0}'}" 
                                                                  FontSize="11"
                                                                  Margin="0,2,0,0" />
                                                        <TextBlock Text="{Binding MemoryInfo, StringFormat='Memory: {0}'}" 
                                                                  FontSize="11"
                                                                  Margin="0,2,0,0" />
                                                        <TextBlock Text="{Binding VmListDisplay, StringFormat='VMs: {0}'}" 
                                                                  FontSize="11"
                                                                  Margin="0,2,0,0"
                                                                  TextWrapping="Wrap" />
                                                    </StackPanel>
                                                </Expander>
                                            </StackPanel>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>

                    <!-- Empty State -->
                    <StackPanel Grid.Row="3" 
                               HorizontalAlignment="Center" 
                               VerticalAlignment="Center">
                        <StackPanel.Style>
                            <Style TargetType="StackPanel">
                                <Setter Property="Visibility" Value="Collapsed" />
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding SourceResourcePools.Count}" Value="0">
                                        <Setter Property="Visibility" Value="Visible" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </StackPanel.Style>
                        <ui:SymbolIcon Symbol="Server24" FontSize="48" Opacity="0.5" HorizontalAlignment="Center" />
                        <TextBlock Text="No resource pools loaded" 
                                  Margin="0,10,0,0" 
                                  HorizontalAlignment="Center"
                                  Foreground="{DynamicResource TextFillColorSecondaryBrush}" />
                        <TextBlock Text="Select a source cluster and click 'Load Pools'" 
                                  HorizontalAlignment="Center"
                                  FontSize="12"
                                  Foreground="{DynamicResource TextFillColorSecondaryBrush}" />
                    </StackPanel>
                </Grid>
            </ui:CardControl>

            <!-- Configuration Panel -->
            <ui:CardControl Grid.Column="2">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <TextBlock Text="Migration Configuration" FontWeight="Medium" />

                        <!-- Export Section -->
                        <TextBlock Text="Export Resource Pools" Margin="0,15,0,5" FontWeight="Medium" />

                        <RadioButton Content="Export all resource pools" 
                                    IsChecked="{Binding ExportAllPools}"
                                    Margin="0,5,0,5" />
                        <RadioButton Content="Export selected pools only" 
                                    IsChecked="{Binding ExportAllPools, Converter={StaticResource InverseBooleanConverter}}"
                                    Margin="0,0,0,10" />

                        <TextBlock Text="Export File Path" Margin="0,0,0,5" FontSize="12" />
                        <Grid Margin="0,0,0,15">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <ui:TextBox Grid.Column="0" 
                                       Text="{Binding ExportFilePath}" 
                                       PlaceholderText="Select export file location..." />
                            <ui:Button Grid.Column="1" 
                                      Content="Browse" 
                                      Command="{Binding BrowseExportFileCommand}" 
                                      Margin="5,0,0,0"
                                      Icon="{ui:SymbolIcon FolderOpen24}" />
                        </Grid>

                        <ui:Button Content="Export Resource Pools" 
                                  Command="{Binding ExportResourcePoolsCommand}"
                                  Appearance="Primary"
                                  Icon="{ui:SymbolIcon ArrowExport24}"
                                  Margin="0,0,0,20"
                                  IsEnabled="{Binding IsOperationRunning, Converter={StaticResource InverseBooleanConverter}}" />

                        <!-- Import Section -->
                        <Separator Margin="0,10,0,15" />

                        <TextBlock Text="Import Resource Pools" Margin="0,0,0,5" FontWeight="Medium" />

                        <TextBlock Text="Target Cluster" Margin="0,5,0,5" FontSize="12" />
                        <ComboBox ItemsSource="{Binding TargetClusters}" 
                                 SelectedItem="{Binding SelectedTargetCluster}"
                                 DisplayMemberPath="Name"
                                 Margin="0,0,0,10" />

                        <TextBlock Text="Import File Path" Margin="0,0,0,5" FontSize="12" />
                        <Grid Margin="0,0,0,15">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <ui:TextBox Grid.Column="0" 
                                       Text="{Binding ImportFilePath}" 
                                       PlaceholderText="Select import file..." />
                            <ui:Button Grid.Column="1" 
                                      Content="Browse" 
                                      Command="{Binding BrowseImportFileCommand}" 
                                      Margin="5,0,0,0"
                                      Icon="{ui:SymbolIcon DocumentSearch24}" />
                        </Grid>

                        <!-- Import Options -->
                        <TextBlock Text="Import Options" Margin="0,10,0,5" FontWeight="Medium" />
                        <CheckBox Content="Remove existing resource pools first" 
                                 IsChecked="{Binding RemoveExistingPools}"
                                 Margin="0,5,0,5"
                                 ToolTip="⚠️ This will delete all existing custom resource pools in the target cluster" />
                        <CheckBox Content="Move VMs to resource pools" 
                                 IsChecked="{Binding MoveVMsToResourcePools}"
                                 Margin="0,0,0,15"
                                 ToolTip="Automatically move VMs to their designated resource pools after creation" />

                        <!-- Report Path -->
                        <TextBlock Text="HTML Report Path (optional)" Margin="0,0,0,5" FontSize="12" />
                        <Grid Margin="0,0,0,15">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <ui:TextBox Grid.Column="0" 
                                       Text="{Binding ReportFilePath}" 
                                       PlaceholderText="HTML report will be auto-generated..." />
                            <ui:Button Grid.Column="1" 
                                      Content="Browse" 
                                      Command="{Binding BrowseReportFileCommand}" 
                                      Margin="5,0,0,0"
                                      Icon="{ui:SymbolIcon DocumentSearch24}" />
                        </Grid>

                        <ui:Button Content="Import Resource Pools" 
                                  Command="{Binding ImportResourcePoolsCommand}"
                                  Appearance="Primary"
                                  Icon="{ui:SymbolIcon ArrowImport24}"
                                  IsEnabled="{Binding IsOperationRunning, Converter={StaticResource InverseBooleanConverter}}" />

                        <!-- Operation Summary -->
                        <Border Background="{DynamicResource ControlFillColorDefaultBrush}" 
                               CornerRadius="4" 
                               Padding="10"
                               Margin="0,20,0,0">
                            <StackPanel>
                                <TextBlock Text="Operation Summary" FontWeight="Medium" FontSize="12" />
                                <TextBlock FontSize="12" Margin="0,5,0,0">
                                    <TextBlock.Text>
                                        <MultiBinding StringFormat="Source: {0}">
                                            <Binding Path="SelectedSourceCluster.Name" TargetNullValue="Not selected" />
                                        </MultiBinding>
                                    </TextBlock.Text>
                                </TextBlock>
                                <TextBlock FontSize="12"
                                          Foreground="{DynamicResource TextFillColorSecondaryBrush}">
                                    <TextBlock.Text>
                                        <MultiBinding StringFormat="Target: {0}">
                                            <Binding Path="SelectedTargetCluster.Name" TargetNullValue="Not selected" />
                                        </MultiBinding>
                                    </TextBlock.Text>
                                </TextBlock>
                                <TextBlock FontSize="12"
                                          Foreground="{DynamicResource TextFillColorSecondaryBrush}">
                                    <TextBlock.Text>
                                        <MultiBinding StringFormat="Pools Available: {0}">
                                            <Binding Path="SourceResourcePools.Count" />
                                        </MultiBinding>
                                    </TextBlock.Text>
                                </TextBlock>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </ScrollViewer>
            </ui:CardControl>
        </Grid>

        <!-- Progress Section -->
        <ui:CardControl Grid.Row="3" Margin="0,20,0,0">
            <StackPanel>
                <TextBlock Text="Operation Progress" FontWeight="Medium" />

                <!-- Overall Progress -->
                <Grid Margin="0,10,0,0" Visibility="{Binding IsOperationRunning, Converter={StaticResource BoolToVisibilityConverter}}">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <ProgressBar Grid.Column="0" 
                                Value="{Binding OperationProgress}" 
                                Maximum="100"
                                Height="8" />
                    <TextBlock Grid.Column="1" 
                              Margin="10,0,0,0"
                              VerticalAlignment="Center"
                              FontSize="12">
                        <TextBlock.Text>
                            <MultiBinding StringFormat="{}{0:F0}%">
                                <Binding Path="OperationProgress" />
                            </MultiBinding>
                        </TextBlock.Text>
                    </TextBlock>
                </Grid>

                <!-- Status and Controls -->
                <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                    <TextBlock Text="{Binding OperationStatus}" 
                              VerticalAlignment="Center"
                              Foreground="{DynamicResource TextFillColorSecondaryBrush}" />
                    <ui:ProgressRing Width="20" Height="20" 
                                    Margin="15,0,0,0"
                                    Visibility="{Binding IsOperationRunning, Converter={StaticResource BoolToVisibilityConverter}}" />
                </StackPanel>
            </StackPanel>
        </ui:CardControl>

        <!-- Operation Log -->
        <Grid Grid.Row="4" Margin="0,20,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <TextBlock Grid.Row="0" Text="Operation Log" FontWeight="Medium"/>
            <ui:TextBox Grid.Row="1"
                       Margin="0,10,0,0"
                       Text="{Binding LogOutput, Mode=OneWay}"
                       IsReadOnly="True"
                       AcceptsReturn="True"
                       VerticalScrollBarVisibility="Auto"
                       FontFamily="Consolas"
                       FontSize="12"/>
        </Grid>
    </Grid>
        </ScrollViewer>
</Page>