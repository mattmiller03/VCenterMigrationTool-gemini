<Page
    x:Class="VCenterMigrationTool.Views.Pages.NetworkMigrationPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:viewmodels="clr-namespace:VCenterMigrationTool.ViewModels"
    xmlns:helpers="clr-namespace:VCenterMigrationTool.Helpers" 
    xmlns:models="clr-namespace:VCenterMigrationTool.Models"
    mc:Ignorable="d"
    d:DataContext="{d:DesignInstance viewmodels:NetworkMigrationViewModel, IsDesignTimeCreatable=False}"
    Title="NetworkMigrationPage"
    ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
    ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}">

    <Page.Resources>
        <helpers:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <helpers:InverseBooleanToVisibilityConverter x:Key="InverseBooleanToVisibilityConverter"/>
        <helpers:CountToVisibilityConverter x:Key="CountToVisibilityConverter"/>
        <helpers:BoolToColorConverter x:Key="BoolToColorConverter"/>
        <helpers:InverseBooleanConverter x:Key="InverseBooleanConverter"/>
    </Page.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto" 
                  HorizontalScrollBarVisibility="Disabled"
                  PanningMode="VerticalOnly"
                  CanContentScroll="True">
        <Grid Margin="42">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*" MinHeight="400"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Grid Grid.Row="0" Margin="0,0,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Text="Network Migration" 
                               FontSize="28" 
                               FontWeight="SemiBold"/>
                    <TextBlock Text="Migrate virtual switches, port groups, and network configurations between vCenter environments" 
                               Opacity="0.7"
                               FontSize="14"
                               Margin="0,5,0,0"
                               TextWrapping="Wrap"/>
                </StackPanel>

                <ui:Button Grid.Column="1" 
                          Content="Refresh" 
                          Icon="{ui:SymbolIcon ArrowSync24}"
                          Command="{Binding RefreshDataCommand}"
                          Appearance="Secondary"
                          VerticalAlignment="Center"
                          Padding="15,8"/>
            </Grid>

            <!-- Connection Status -->
            <Grid Grid.Row="1" Margin="0,0,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Source Connection -->
                <ui:Card Grid.Column="0" Margin="0,0,10,0">
                    <Grid Margin="20,15">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
                            <ui:SymbolIcon Symbol="Server24" Margin="0,0,10,0" VerticalAlignment="Center"/>
                            <TextBlock Text="Source vCenter" FontWeight="SemiBold" FontSize="16" VerticalAlignment="Center"/>
                        </StackPanel>
                        
                        <StackPanel Grid.Row="1" Margin="0,0,0,15">
                            <TextBlock Text="{Binding SourceNetworkTopology.Count, StringFormat='🔌 {0} hosts loaded'}" 
                                       FontWeight="Medium"
                                       Margin="0,0,0,5"/>
                            <TextBlock Text="{Binding SourceNetworkTopology, Converter={StaticResource NetworkSummaryConverter}}" 
                                       FontSize="12"
                                       Opacity="0.7"
                                       TextWrapping="Wrap"/>
                        </StackPanel>
                        
                        <ui:Button Grid.Row="2"
                                  Content="Load Source Network"
                                  Icon="{ui:SymbolIcon CloudArrowDown24}"
                                  Command="{Binding LoadSourceNetworkDataCommand}"
                                  IsEnabled="{Binding IsLoadingData, Converter={StaticResource InverseBooleanConverter}}"
                                  Appearance="Primary"
                                  HorizontalAlignment="Stretch"/>
                    </Grid>
                </ui:Card>

                <!-- Arrow -->
                <ui:SymbolIcon Grid.Column="1" 
                              Symbol="ArrowRight24" 
                              FontSize="24" 
                              VerticalAlignment="Center"
                              Margin="10,0"/>

                <!-- Target Connection -->
                <ui:Card Grid.Column="2" Margin="10,0,0,0">
                    <Grid Margin="20,15">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
                            <ui:SymbolIcon Symbol="Server24" Margin="0,0,10,0" VerticalAlignment="Center"/>
                            <TextBlock Text="Target vCenter" FontWeight="SemiBold" FontSize="16" VerticalAlignment="Center"/>
                        </StackPanel>
                        
                        <StackPanel Grid.Row="1" Margin="0,0,0,15">
                            <TextBlock Text="{Binding TargetNetworkTopology.Count, StringFormat='🔌 {0} hosts loaded'}" 
                                       FontWeight="Medium"
                                       Margin="0,0,0,5"/>
                            <TextBlock Text="{Binding TargetNetworkTopology, Converter={StaticResource NetworkSummaryConverter}}" 
                                       FontSize="12"
                                       Opacity="0.7"
                                       TextWrapping="Wrap"/>
                        </StackPanel>
                        
                        <ui:Button Grid.Row="2"
                                  Content="Load Target Network"
                                  Icon="{ui:SymbolIcon CloudArrowDown24}"
                                  Command="{Binding LoadTargetNetworkDataCommand}"
                                  IsEnabled="{Binding IsLoadingData, Converter={StaticResource InverseBooleanConverter}}"
                                  Appearance="Primary"
                                  HorizontalAlignment="Stretch"/>
                    </Grid>
                </ui:Card>
            </Grid>

            <!-- Migration Options -->
            <ui:Card Grid.Row="2" Margin="0,0,0,20">
                <Grid Margin="20,15">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,15">
                        <ui:SymbolIcon Symbol="Options24" Margin="0,0,10,0" VerticalAlignment="Center"/>
                        <TextBlock Text="Migration Options" FontWeight="SemiBold" FontSize="16" VerticalAlignment="Center"/>
                    </StackPanel>

                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- First Row of Options -->
                        <CheckBox Grid.Row="0" Grid.Column="0" 
                                 IsChecked="{Binding MigrateStandardSwitches}"
                                 Margin="0,0,20,15">
                            <StackPanel>
                                <TextBlock Text="Standard Switches" FontWeight="Medium"/>
                                <TextBlock Text="Migrate vSphere standard switches" 
                                          FontSize="11" 
                                          Opacity="0.7"
                                          TextWrapping="Wrap"/>
                            </StackPanel>
                        </CheckBox>

                        <CheckBox Grid.Row="0" Grid.Column="1" 
                                 IsChecked="{Binding MigrateDistributedSwitches}"
                                 Margin="0,0,20,15">
                            <StackPanel>
                                <TextBlock Text="Distributed Switches" FontWeight="Medium"/>
                                <TextBlock Text="Migrate VDS configurations" 
                                          FontSize="11" 
                                          Opacity="0.7"
                                          TextWrapping="Wrap"/>
                            </StackPanel>
                        </CheckBox>

                        <CheckBox Grid.Row="0" Grid.Column="2" 
                                 IsChecked="{Binding MigratePortGroups}"
                                 Margin="0,0,20,15">
                            <StackPanel>
                                <TextBlock Text="Port Groups" FontWeight="Medium"/>
                                <TextBlock Text="Include all port group settings" 
                                          FontSize="11" 
                                          Opacity="0.7"
                                          TextWrapping="Wrap"/>
                            </StackPanel>
                        </CheckBox>

                        <CheckBox Grid.Row="0" Grid.Column="3" 
                                 IsChecked="{Binding MigrateVmkernelPorts}"
                                 Margin="0,0,0,15">
                            <StackPanel>
                                <TextBlock Text="VMkernel Ports" FontWeight="Medium"/>
                                <TextBlock Text="Migrate VMkernel adapters" 
                                          FontSize="11" 
                                          Opacity="0.7"
                                          TextWrapping="Wrap"/>
                            </StackPanel>
                        </CheckBox>

                        <!-- Second Row of Options -->
                        <CheckBox Grid.Row="1" Grid.Column="0" 
                                 IsChecked="{Binding PreserveVlanIds}"
                                 Margin="0,0,20,0">
                            <StackPanel>
                                <TextBlock Text="Preserve VLANs" FontWeight="Medium"/>
                                <TextBlock Text="Keep original VLAN IDs" 
                                          FontSize="11" 
                                          Opacity="0.7"
                                          TextWrapping="Wrap"/>
                            </StackPanel>
                        </CheckBox>

                        <CheckBox Grid.Row="1" Grid.Column="1" 
                                 IsChecked="{Binding RecreateIfExists}"
                                 Margin="0,0,20,0">
                            <StackPanel>
                                <TextBlock Text="Recreate Existing" FontWeight="Medium"/>
                                <TextBlock Text="Replace if already exists" 
                                          FontSize="11" 
                                          Opacity="0.7"
                                          TextWrapping="Wrap"/>
                            </StackPanel>
                        </CheckBox>

                        <CheckBox Grid.Row="1" Grid.Column="2" 
                                 IsChecked="{Binding ValidateOnly}"
                                 Margin="0,0,20,0">
                            <StackPanel>
                                <TextBlock Text="Validate Only" FontWeight="Medium"/>
                                <TextBlock Text="Check compatibility without changes" 
                                          FontSize="11" 
                                          Opacity="0.7"
                                          TextWrapping="Wrap"/>
                            </StackPanel>
                        </CheckBox>
                    </Grid>
                </Grid>
            </ui:Card>

            <!-- Network Selection -->
            <Grid Grid.Row="3" Margin="0,0,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Source Networks -->
                <ui:Card Grid.Column="0">
                    <Grid Margin="20,15">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*" MaxHeight="350"/>
                        </Grid.RowDefinitions>

                        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,15">
                            <ui:SymbolIcon Symbol="CloudFlow24" Margin="0,0,10,0" VerticalAlignment="Center"/>
                            <TextBlock Text="Source Networks" FontWeight="SemiBold" FontSize="16" VerticalAlignment="Center"/>
                            <ui:Button Content="Select All"
                                      Command="{Binding SelectAllNetworkItemsCommand}"
                                      Appearance="Secondary"
                                      FontSize="11"
                                      Padding="6,2"
                                      Margin="15,0,5,0"/>
                            <ui:Button Content="Clear"
                                      Command="{Binding UnselectAllNetworkItemsCommand}"
                                      Appearance="Secondary"
                                      FontSize="11"
                                      Padding="6,2"/>
                        </StackPanel>

                        <TextBlock Grid.Row="1" 
                                  Text="{Binding MigrationStatus}" 
                                  FontSize="12"
                                  Opacity="0.7"
                                  Margin="0,0,0,10"
                                  TextWrapping="Wrap"/>

                        <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto">
                            <ItemsControl ItemsSource="{Binding SourceNetworkTopology}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Expander Header="{Binding Name}" 
                                                 IsExpanded="False"
                                                 Margin="0,0,0,10">
                                            <Border Background="{DynamicResource ControlFillColorDefaultBrush}" 
                                                   CornerRadius="4" 
                                                   Padding="10"
                                                   Margin="0,5,0,0">
                                                <StackPanel>
                                                    <!-- vSwitches -->
                                                    <TextBlock Text="Virtual Switches" 
                                                              FontWeight="Medium" 
                                                              Margin="0,0,0,10"/>
                                                    <ItemsControl ItemsSource="{Binding VSwitches}">
                                                        <ItemsControl.ItemTemplate>
                                                            <DataTemplate>
                                                                <Border Background="{DynamicResource ControlFillColorSecondaryBrush}" 
                                                                       CornerRadius="3" 
                                                                       Padding="8"
                                                                       Margin="0,0,0,5">
                                                                    <Grid>
                                                                        <Grid.ColumnDefinitions>
                                                                            <ColumnDefinition Width="Auto"/>
                                                                            <ColumnDefinition Width="*"/>
                                                                            <ColumnDefinition Width="Auto"/>
                                                                        </Grid.ColumnDefinitions>

                                                                        <CheckBox Grid.Column="0" 
                                                                                 IsChecked="{Binding IsSelected}"
                                                                                 Margin="0,0,10,0"/>
                                                                        
                                                                        <StackPanel Grid.Column="1">
                                                                            <TextBlock Text="{Binding Name}" FontWeight="Medium"/>
                                                                            <TextBlock Text="{Binding Type}" FontSize="11" Opacity="0.7"/>
                                                                        </StackPanel>

                                                                        <ui:InfoBadge Grid.Column="2" 
                                                                                     Value="{Binding PortGroups.Count}"
                                                                                     ToolTip="Port Groups"/>
                                                                    </Grid>
                                                                </Border>
                                                            </DataTemplate>
                                                        </ItemsControl.ItemTemplate>
                                                    </ItemsControl>

                                                    <!-- VMkernel Ports -->
                                                    <TextBlock Text="VMkernel Ports" 
                                                              FontWeight="Medium" 
                                                              Margin="0,15,0,10"
                                                              Visibility="{Binding VmKernelPorts.Count, Converter={StaticResource CountToVisibilityConverter}}"/>
                                                    <ItemsControl ItemsSource="{Binding VmKernelPorts}">
                                                        <ItemsControl.ItemTemplate>
                                                            <DataTemplate>
                                                                <Border Background="{DynamicResource ControlFillColorSecondaryBrush}" 
                                                                       CornerRadius="3" 
                                                                       Padding="8"
                                                                       Margin="0,0,0,5">
                                                                    <Grid>
                                                                        <Grid.ColumnDefinitions>
                                                                            <ColumnDefinition Width="Auto"/>
                                                                            <ColumnDefinition Width="*"/>
                                                                        </Grid.ColumnDefinitions>

                                                                        <CheckBox Grid.Column="0" 
                                                                                 IsChecked="{Binding IsSelected}"
                                                                                 Margin="0,0,10,0"/>
                                                                        
                                                                        <StackPanel Grid.Column="1">
                                                                            <TextBlock Text="{Binding Name}" FontWeight="Medium"/>
                                                                            <TextBlock Text="{Binding IpAddress}" FontSize="11" Opacity="0.7"/>
                                                                        </StackPanel>
                                                                    </Grid>
                                                                </Border>
                                                            </DataTemplate>
                                                        </ItemsControl.ItemTemplate>
                                                    </ItemsControl>
                                                </StackPanel>
                                            </Border>
                                        </Expander>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                    </Grid>
                </ui:Card>

                <!-- Target Networks -->
                <ui:Card Grid.Column="2">
                    <Grid Margin="20,15">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*" MaxHeight="350"/>
                        </Grid.RowDefinitions>

                        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,15">
                            <ui:SymbolIcon Symbol="CloudSync24" Margin="0,0,10,0" VerticalAlignment="Center"/>
                            <TextBlock Text="Target Networks" FontWeight="SemiBold" FontSize="16" VerticalAlignment="Center"/>
                        </StackPanel>

                        <TextBlock Grid.Row="1" 
                                  Text="Existing network configuration at target" 
                                  FontSize="12"
                                  Opacity="0.7"
                                  Margin="0,0,0,10"/>

                        <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto">
                            <ItemsControl ItemsSource="{Binding TargetNetworkTopology}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Expander Header="{Binding Name}" 
                                                 IsExpanded="False"
                                                 Margin="0,0,0,10">
                                            <Border Background="{DynamicResource ControlFillColorDefaultBrush}" 
                                                   CornerRadius="4" 
                                                   Padding="10"
                                                   Margin="0,5,0,0">
                                                <StackPanel>
                                                    <!-- vSwitches -->
                                                    <TextBlock Text="Virtual Switches" 
                                                              FontWeight="Medium" 
                                                              Margin="0,0,0,10"/>
                                                    <ItemsControl ItemsSource="{Binding VSwitches}">
                                                        <ItemsControl.ItemTemplate>
                                                            <DataTemplate>
                                                                <Border Background="{DynamicResource ControlFillColorSecondaryBrush}" 
                                                                       CornerRadius="3" 
                                                                       Padding="8"
                                                                       Margin="0,0,0,5">
                                                                    <Grid>
                                                                        <Grid.ColumnDefinitions>
                                                                            <ColumnDefinition Width="*"/>
                                                                            <ColumnDefinition Width="Auto"/>
                                                                        </Grid.ColumnDefinitions>
                                                                        
                                                                        <StackPanel Grid.Column="0">
                                                                            <TextBlock Text="{Binding Name}" FontWeight="Medium"/>
                                                                            <TextBlock Text="{Binding Type}" FontSize="11" Opacity="0.7"/>
                                                                        </StackPanel>

                                                                        <ui:InfoBadge Grid.Column="1" 
                                                                                     Value="{Binding PortGroups.Count}"
                                                                                     ToolTip="Port Groups"/>
                                                                    </Grid>
                                                                </Border>
                                                            </DataTemplate>
                                                        </ItemsControl.ItemTemplate>
                                                    </ItemsControl>

                                                    <!-- VMkernel Ports -->
                                                    <TextBlock Text="VMkernel Ports" 
                                                              FontWeight="Medium" 
                                                              Margin="0,15,0,10"
                                                              Visibility="{Binding VmKernelPorts.Count, Converter={StaticResource CountToVisibilityConverter}}"/>
                                                    <ItemsControl ItemsSource="{Binding VmKernelPorts}">
                                                        <ItemsControl.ItemTemplate>
                                                            <DataTemplate>
                                                                <Border Background="{DynamicResource ControlFillColorSecondaryBrush}" 
                                                                       CornerRadius="3" 
                                                                       Padding="8"
                                                                       Margin="0,0,0,5">
                                                                    <StackPanel>
                                                                        <TextBlock Text="{Binding Name}" FontWeight="Medium"/>
                                                                        <TextBlock Text="{Binding IpAddress}" FontSize="11" Opacity="0.7"/>
                                                                    </StackPanel>
                                                                </Border>
                                                            </DataTemplate>
                                                        </ItemsControl.ItemTemplate>
                                                    </ItemsControl>
                                                </StackPanel>
                                            </Border>
                                        </Expander>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                    </Grid>
                </ui:Card>
            </Grid>

            <!-- Action Buttons -->
            <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,20">
                <ui:Button Content="Export VDS Configuration" 
                          Icon="{ui:SymbolIcon DocumentArrowLeft24}"
                          Command="{Binding ExportNetworkConfigurationCommand}"
                          Appearance="Secondary"
                          Margin="0,0,10,0"
                          Padding="15,10"/>
                
                <ui:Button Content="Import VDS Configuration" 
                          Icon="{ui:SymbolIcon DocumentArrowRight24}"
                          Command="{Binding ImportNetworkConfigurationCommand}"
                          Appearance="Secondary"
                          Margin="0,0,10,0"
                          Padding="15,10"/>
                
                <ui:Button Content="Validate Network Migration" 
                          Icon="{ui:SymbolIcon CheckmarkCircle24}"
                          Command="{Binding ValidateNetworkMigrationCommand}"
                          Appearance="Info"
                          Margin="0,0,10,0"
                          Padding="15,10"/>
                
                <ui:Button Content="Start Migration" 
                          Icon="{ui:SymbolIcon ArrowForward24}"
                          Command="{Binding StartNetworkMigrationCommand}"
                          IsEnabled="{Binding IsLoadingData, Converter={StaticResource InverseBooleanConverter}}"
                          Appearance="Primary"
                          Padding="15,10"/>
            </StackPanel>

            <!-- Activity Log -->
            <ui:Card Grid.Row="5">
                <Grid Margin="20,15">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,15">
                        <ui:SymbolIcon Symbol="DocumentBulletList24" Margin="0,0,10,0" VerticalAlignment="Center"/>
                        <TextBlock Text="Activity Log" FontWeight="SemiBold" FontSize="16" VerticalAlignment="Center"/>
                        <ui:Button Content="Clear"
                                  Icon="{ui:SymbolIcon Delete24}"
                                  Command="{Binding ClearLogCommand}"
                                  Appearance="Secondary"
                                  FontSize="12"
                                  Padding="8,4"
                                  Margin="20,0,0,0"/>
                        <ui:Button Content="Export Log"
                                  Icon="{ui:SymbolIcon DocumentSave24}"
                                  Command="{Binding ExportLogCommand}"
                                  Appearance="Secondary"
                                  FontSize="12"
                                  Padding="8,4"
                                  Margin="10,0,0,0"/>
                    </StackPanel>

                    <Border Grid.Row="1" 
                           Background="{DynamicResource ControlFillColorDefaultBrush}"
                           CornerRadius="4"
                           Padding="10">
                        <ScrollViewer VerticalScrollBarVisibility="Auto" MaxHeight="200">
                            <TextBox Text="{Binding LogOutput}"
                                    IsReadOnly="True"
                                    BorderThickness="0"
                                    Background="Transparent"
                                    FontFamily="Cascadia Code,Consolas,Courier New"
                                    FontSize="12"
                                    TextWrapping="Wrap"/>
                        </ScrollViewer>
                    </Border>
                </Grid>
            </ui:Card>

            <!-- Progress Overlay -->
            <Grid Grid.Row="0" Grid.RowSpan="6" 
                  Background="{DynamicResource ApplicationBackgroundBrush}"
                  Opacity="0.95"
                  Visibility="{Binding IsMigrationInProgress, Converter={StaticResource BoolToVisibilityConverter}}">
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                    <ui:ProgressRing Width="60" Height="60" IsIndeterminate="False" Progress="{Binding MigrationProgress}"/>
                    <TextBlock Text="Network Migration in Progress" 
                              FontSize="16" 
                              FontWeight="Medium"
                              Margin="0,20,0,0"
                              HorizontalAlignment="Center"/>
                    <TextBlock Text="{Binding MigrationStatus}" 
                              FontSize="14" 
                              Opacity="0.7"
                              Margin="0,10,0,0"
                              HorizontalAlignment="Center"
                              TextWrapping="Wrap"
                              MaxWidth="400"/>
                    <ui:Button Content="Cancel"
                              Icon="{ui:SymbolIcon Dismiss24}"
                              Command="{Binding CancelMigrationCommand}"
                              Appearance="Secondary"
                              Margin="0,20,0,0"/>
                </StackPanel>
            </Grid>
        </Grid>
    </ScrollViewer>
</Page>