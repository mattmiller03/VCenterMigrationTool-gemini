<Page
    x:Class="VCenterMigrationTool.Views.Pages.NetworkMigrationPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:viewmodels="clr-namespace:VCenterMigrationTool.ViewModels"
    xmlns:helpers="clr-namespace:VCenterMigrationTool.Helpers" 
    xmlns:models="clr-namespace:VCenterMigrationTool.Models"
    mc:Ignorable="d"
    d:DataContext="{d:DesignInstance viewmodels:NetworkMigrationViewModel, IsDesignTimeCreatable=False}"
    Title="NetworkMigrationPage"
    ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
    ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}">

    <Page.Resources>
        <helpers:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <helpers:InverseBooleanToVisibilityConverter x:Key="InverseBooleanToVisibilityConverter"/>
        <helpers:CountToVisibilityConverter x:Key="CountToVisibilityConverter"/>
        <helpers:BoolToColorConverter x:Key="BoolToColorConverter"/>
        <helpers:InverseBooleanConverter x:Key="InverseBooleanConverter"/>
    </Page.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto" 
                  HorizontalScrollBarVisibility="Disabled"
                  PanningMode="VerticalOnly"
                  CanContentScroll="True">
        <Grid Margin="42">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*" MinHeight="400"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Grid Grid.Row="0" Margin="0,0,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Text="Network Migration" 
                               FontSize="28" 
                               FontWeight="SemiBold"/>
                    <TextBlock Text="Migrate Virtual Distributed Switches (vDS) and distributed port groups between vCenter environments" 
                               Opacity="0.7"
                               FontSize="14"
                               Margin="0,5,0,0"
                               TextWrapping="Wrap"/>
                </StackPanel>

                <ui:Button Grid.Column="1" 
                          Content="Refresh" 
                          Icon="{ui:SymbolIcon ArrowSync24}"
                          Command="{Binding LoadSourceNetworkDataCommand}"
                          Appearance="Secondary"
                          VerticalAlignment="Center"
                          Padding="15,8"/>
            </Grid>

            <!-- Connection Status -->
            <Grid Grid.Row="1" Margin="0,0,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Source Connection -->
                <ui:Card Grid.Column="0" Margin="0,0,10,0">
                    <Grid Margin="20,15">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
                            <ui:SymbolIcon Symbol="Server24" Margin="0,0,10,0" VerticalAlignment="Center"/>
                            <TextBlock Text="Source vCenter" FontWeight="SemiBold" FontSize="16" VerticalAlignment="Center"/>
                        </StackPanel>
                        
                        <StackPanel Grid.Row="1" Margin="0,0,0,15">
                            <TextBlock Text="{Binding VdsStatus}" 
                                       FontWeight="Medium"
                                       Margin="0,0,0,5"/>
                            <TextBlock Text="Virtual Distributed Switches detected" 
                                       FontSize="12"
                                       Opacity="0.7"
                                       TextWrapping="Wrap"/>
                        </StackPanel>
                        
                        <ui:Button Grid.Row="2"
                                  Content="Load Source Network"
                                  Icon="{ui:SymbolIcon CloudArrowDown24}"
                                  Command="{Binding LoadSourceNetworkDataCommand}"
                                  IsEnabled="{Binding IsLoadingData, Converter={StaticResource InverseBooleanConverter}}"
                                  Appearance="Primary"
                                  HorizontalAlignment="Stretch"/>
                    </Grid>
                </ui:Card>

                <!-- Arrow -->
                <ui:SymbolIcon Grid.Column="1" 
                              Symbol="ArrowRight24" 
                              FontSize="24" 
                              VerticalAlignment="Center"
                              Margin="10,0"/>

                <!-- Target Connection -->
                <ui:Card Grid.Column="2" Margin="10,0,0,0">
                    <Grid Margin="20,15">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
                            <ui:SymbolIcon Symbol="Server24" Margin="0,0,10,0" VerticalAlignment="Center"/>
                            <TextBlock Text="Target vCenter" FontWeight="SemiBold" FontSize="16" VerticalAlignment="Center"/>
                        </StackPanel>
                        
                        <StackPanel Grid.Row="1" Margin="0,0,0,15">
                            <TextBlock Text="{Binding MigrationStatus}" 
                                       FontWeight="Medium"
                                       Margin="0,0,0,5"/>
                            <TextBlock Text="Target vCenter configuration" 
                                       FontSize="12"
                                       Opacity="0.7"
                                       TextWrapping="Wrap"/>
                        </StackPanel>
                        
                        <ui:Button Grid.Row="2"
                                  Content="Load Target Network"
                                  Icon="{ui:SymbolIcon CloudArrowDown24}"
                                  Command="{Binding LoadTargetNetworkDataCommand}"
                                  IsEnabled="{Binding IsLoadingData, Converter={StaticResource InverseBooleanConverter}}"
                                  Appearance="Primary"
                                  HorizontalAlignment="Stretch"/>
                    </Grid>
                </ui:Card>
            </Grid>

            <!-- Migration Options -->
            <ui:Card Grid.Row="2" Margin="0,0,0,20">
                <Grid Margin="20,15">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,15">
                        <ui:SymbolIcon Symbol="Options24" Margin="0,0,10,0" VerticalAlignment="Center"/>
                        <TextBlock Text="Migration Options" FontWeight="SemiBold" FontSize="16" VerticalAlignment="Center"/>
                    </StackPanel>

                    <StackPanel Grid.Row="1" Orientation="Horizontal">
                        
                        <CheckBox IsChecked="{Binding RecreateIfExists}"
                                 Margin="0,0,40,0">
                            <StackPanel>
                                <TextBlock Text="Replace Existing" FontWeight="Medium"/>
                                <TextBlock Text="Replace vDS/port groups if they exist" 
                                          FontSize="11" 
                                          Opacity="0.7"
                                          TextWrapping="Wrap"/>
                            </StackPanel>
                        </CheckBox>

                        <CheckBox IsChecked="{Binding ValidateOnly}"
                                 Margin="0,0,0,0">
                            <StackPanel>
                                <TextBlock Text="Validate Only" FontWeight="Medium"/>
                                <TextBlock Text="Check compatibility without making changes" 
                                          FontSize="11" 
                                          Opacity="0.7"
                                          TextWrapping="Wrap"/>
                            </StackPanel>
                        </CheckBox>
                        
                    </StackPanel>
                </Grid>
            </ui:Card>

            <!-- Network Selection -->
            <Grid Grid.Row="3" Margin="0,0,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Source vDS Switches -->
                <ui:Card Grid.Column="0">
                    <Grid Margin="20,15">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*" MaxHeight="350"/>
                        </Grid.RowDefinitions>

                        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,15">
                            <ui:SymbolIcon Symbol="CloudFlow24" Margin="0,0,10,0" VerticalAlignment="Center"/>
                            <TextBlock Text="Source vDS Switches" FontWeight="SemiBold" FontSize="16" VerticalAlignment="Center"/>
                        </StackPanel>

                        <StackPanel Grid.Row="1" Margin="0,0,0,15">
                            <TextBlock Text="{Binding VdsStatus}" 
                                      FontSize="12"
                                      Opacity="0.7"
                                      Margin="0,0,0,5"
                                      TextWrapping="Wrap"/>
                            <TextBlock Text="Select switches to migrate" 
                                      FontSize="11"
                                      Opacity="0.6"/>
                        </StackPanel>

                        <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto">
                            <StackPanel>
                                <!-- VDS Switches -->
                                <TextBlock Text="Virtual Distributed Switches" 
                                          FontWeight="Medium" 
                                          Margin="0,0,0,10"
                                          Visibility="{Binding SourceVDSSwitches.Count, Converter={StaticResource CountToVisibilityConverter}}"/>
                                <ItemsControl ItemsSource="{Binding SourceVDSSwitches}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border Background="{DynamicResource ControlFillColorDefaultBrush}" 
                                                   CornerRadius="4" 
                                                   Padding="12"
                                                   Margin="0,0,0,8">
                                                <StackPanel>
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="Auto"/>
                                                            <ColumnDefinition Width="*"/>
                                                        </Grid.ColumnDefinitions>
                                                        
                                                        <ui:SymbolIcon Grid.Column="0" Symbol="Router24" 
                                                                      Margin="0,0,10,0" VerticalAlignment="Top"/>
                                                        <StackPanel Grid.Column="1">
                                                            <TextBlock Text="{Binding Name}" FontWeight="SemiBold" FontSize="14"/>
                                                            <TextBlock Text="{Binding Type}" FontSize="11" Opacity="0.7"/>
                                                        </StackPanel>
                                                    </Grid>
                                                </StackPanel>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>

                                <!-- Port Groups -->
                                <TextBlock Text="Distributed Port Groups" 
                                          FontWeight="Medium" 
                                          Margin="0,15,0,10"
                                          Visibility="{Binding SourcePortGroups.Count, Converter={StaticResource CountToVisibilityConverter}}"/>
                                <ItemsControl ItemsSource="{Binding SourcePortGroups}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border Background="{DynamicResource ControlFillColorSecondaryBrush}" 
                                                   CornerRadius="3" 
                                                   Padding="10"
                                                   Margin="0,0,0,5">
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                    </Grid.ColumnDefinitions>
                                                    
                                                    <ui:SymbolIcon Grid.Column="0" Symbol="Organization24" 
                                                                  FontSize="14" Margin="0,0,8,0" VerticalAlignment="Center"/>
                                                    
                                                    <StackPanel Grid.Column="1">
                                                        <TextBlock Text="{Binding Name}" FontWeight="Medium" FontSize="13"/>
                                                        <TextBlock Text="{Binding Type}" FontSize="10" Opacity="0.6"/>
                                                    </StackPanel>

                                                    <TextBlock Grid.Column="2" 
                                                              Text="{Binding VlanId, StringFormat='VLAN {0}'}" 
                                                              FontSize="10" 
                                                              Opacity="0.7"
                                                              VerticalAlignment="Center"
                                                              Visibility="{Binding VlanId, Converter={StaticResource CountToVisibilityConverter}}"/>
                                                </Grid>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </StackPanel>
                        </ScrollViewer>
                    </Grid>
                </ui:Card>

                <!-- Target vCenter Status -->
                <ui:Card Grid.Column="2">
                    <Grid Margin="20,15">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*" MaxHeight="350"/>
                        </Grid.RowDefinitions>

                        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,15">
                            <ui:SymbolIcon Symbol="CloudSync24" Margin="0,0,10,0" VerticalAlignment="Center"/>
                            <TextBlock Text="Target vCenter" FontWeight="SemiBold" FontSize="16" VerticalAlignment="Center"/>
                        </StackPanel>

                        <StackPanel Grid.Row="1" Margin="0,0,0,15">
                            <TextBlock Text="{Binding MigrationStatus}" 
                                      FontSize="12"
                                      Opacity="0.7"
                                      Margin="0,0,0,5"
                                      TextWrapping="Wrap"/>
                            <TextBlock Text="Destination for vDS migration" 
                                      FontSize="11"
                                      Opacity="0.6"/>
                        </StackPanel>

                        <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto">
                            <StackPanel>
                                <Border Background="{DynamicResource ControlFillColorDefaultBrush}" 
                                       CornerRadius="6" 
                                       Padding="20"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center">
                                    <StackPanel HorizontalAlignment="Center">
                                        <ui:SymbolIcon Symbol="CloudSync24" FontSize="32" Margin="0,0,0,10" Opacity="0.6" HorizontalAlignment="Center"/>
                                        <TextBlock Text="Migration Destination" FontWeight="SemiBold" FontSize="14" Margin="0,0,0,5" TextAlignment="Center"/>
                                        <TextBlock Text="vDS switches will be created here" FontSize="11" Opacity="0.7" TextWrapping="Wrap" TextAlignment="Center"/>
                                        <TextBlock Text="using native PowerCLI backup restore" FontSize="10" Opacity="0.5" Margin="0,5,0,0" TextAlignment="Center"/>
                                    </StackPanel>
                                </Border>
                            </StackPanel>
                        </ScrollViewer>
                    </Grid>
                </ui:Card>
            </Grid>

            <!-- Action Buttons -->
            <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,20">
                <ui:Button Content="Export VDS Configuration" 
                          Icon="{ui:SymbolIcon DocumentArrowLeft24}"
                          Command="{Binding ExportVdsConfigurationCommand}"
                          Appearance="Secondary"
                          Margin="0,0,10,0"
                          Padding="15,10"/>
                
                <ui:Button Content="Import VDS Configuration" 
                          Icon="{ui:SymbolIcon DocumentArrowRight24}"
                          Command="{Binding ImportVdsConfigurationCommand}"
                          Appearance="Secondary"
                          Margin="0,0,10,0"
                          Padding="15,10"/>
            </StackPanel>

            <!-- Activity Log -->
            <ui:Card Grid.Row="5">
                <Grid Margin="20,15">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,15">
                        <ui:SymbolIcon Symbol="DocumentBulletList24" Margin="0,0,10,0" VerticalAlignment="Center"/>
                        <TextBlock Text="Activity Log" FontWeight="SemiBold" FontSize="16" VerticalAlignment="Center"/>
                    </StackPanel>

                    <Border Grid.Row="1" 
                           Background="{DynamicResource ControlFillColorDefaultBrush}"
                           CornerRadius="4"
                           Padding="10">
                        <ScrollViewer VerticalScrollBarVisibility="Auto" MaxHeight="200">
                            <TextBox Text="{Binding LogOutput}"
                                    IsReadOnly="True"
                                    BorderThickness="0"
                                    Background="Transparent"
                                    FontFamily="Cascadia Code,Consolas,Courier New"
                                    FontSize="12"
                                    TextWrapping="Wrap"/>
                        </ScrollViewer>
                    </Border>
                </Grid>
            </ui:Card>

        </Grid>
    </ScrollViewer>
</Page>