<Page
    x:Class="VCenterMigrationTool.Views.Pages.AdminConfigMigrationPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:viewmodels="clr-namespace:VCenterMigrationTool.ViewModels"
    xmlns:helpers="clr-namespace:VCenterMigrationTool.Helpers"
    mc:Ignorable="d"
    d:DataContext="{d:DesignInstance viewmodels:AdminConfigMigrationViewModel, IsDesignTimeCreatable=False}"
    Title="AdminConfigMigrationPage"
    ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
    ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}">

    <Page.Resources>
        <helpers:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <helpers:InverseBooleanToVisibilityConverter x:Key="InverseBooleanToVisibilityConverter"/>
        <helpers:CountToVisibilityConverter x:Key="CountToVisibilityConverter"/>
        <helpers:BoolToColorConverter x:Key="BoolToColorConverter"/>
    </Page.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto" 
                  HorizontalScrollBarVisibility="Disabled"
                  PanningMode="VerticalOnly"
                  CanContentScroll="True">
        <Grid Margin="42">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*" MinHeight="400"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Grid Grid.Row="0" Margin="0,0,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Text="Admin Configuration Migration" 
                               FontSize="28" 
                               FontWeight="SemiBold"/>
                    <TextBlock Text="Migrate roles, permissions, folders, tags, certificates, and administrative configurations" 
                               Opacity="0.7"
                               FontSize="14"
                               Margin="0,5,0,0"
                               TextWrapping="Wrap"/>
                </StackPanel>

                <ui:Button Grid.Column="1" 
                          Content="Refresh" 
                          Icon="{ui:SymbolIcon ArrowSync24}"
                          Command="{Binding RefreshDataCommand}"
                          Appearance="Secondary"
                          VerticalAlignment="Center"
                          Padding="15,8"/>
            </Grid>

            <!-- Connection Status -->
            <Grid Grid.Row="1" Margin="0,0,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Source Connection -->
                <ui:Card Grid.Column="0" Margin="0,0,10,0">
                    <Grid Margin="20,15">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
                            <ui:SymbolIcon Symbol="Settings24" Margin="0,0,10,0" VerticalAlignment="Center"/>
                            <TextBlock Text="Source vCenter" FontWeight="SemiBold" FontSize="16" VerticalAlignment="Center"/>
                        </StackPanel>
                        
                        <StackPanel Grid.Row="1">
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                <Ellipse Width="12" Height="12" 
                                         Fill="{Binding IsSourceConnected, Converter={StaticResource BoolToColorConverter}}"
                                         Margin="0,0,8,0" 
                                         VerticalAlignment="Center"/>
                                <TextBlock Text="{Binding SourceConnectionStatus}" 
                                           FontWeight="Medium"
                                           VerticalAlignment="Center"/>
                            </StackPanel>
                            
                            <ui:Button Content="Load Admin Configuration"
                                      Icon="{ui:SymbolIcon CloudArrowDown24}"
                                      Command="{Binding LoadSourceAdminConfigCommand}"
                                      IsEnabled="{Binding IsSourceConnected}"
                                      Appearance="Primary"
                                      Margin="0,10,0,0"
                                      HorizontalAlignment="Stretch"/>
                                      
                            <TextBlock Text="{Binding SourceDataStatus}"
                                      FontSize="12"
                                      Opacity="0.7"
                                      Margin="0,5,0,0"/>
                        </StackPanel>
                    </Grid>
                </ui:Card>

                <!-- Connection Arrow -->
                <ui:SymbolIcon Grid.Column="1" 
                              Symbol="ArrowRight24" 
                              FontSize="24"
                              VerticalAlignment="Center"
                              Margin="15,0"
                              Opacity="0.6"/>

                <!-- Target Connection -->
                <ui:Card Grid.Column="2" Margin="10,0,0,0">
                    <Grid Margin="20,15">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
                            <ui:SymbolIcon Symbol="Settings24" Margin="0,0,10,0" VerticalAlignment="Center"/>
                            <TextBlock Text="Target vCenter" FontWeight="SemiBold" FontSize="16" VerticalAlignment="Center"/>
                        </StackPanel>
                        
                        <StackPanel Grid.Row="1">
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                <Ellipse Width="12" Height="12" 
                                         Fill="{Binding IsTargetConnected, Converter={StaticResource BoolToColorConverter}}"
                                         Margin="0,0,8,0" 
                                         VerticalAlignment="Center"/>
                                <TextBlock Text="{Binding TargetConnectionStatus}" 
                                           FontWeight="Medium"
                                           VerticalAlignment="Center"/>
                            </StackPanel>
                            
                            <ui:Button Content="Load Admin Configuration"
                                      Icon="{ui:SymbolIcon CloudArrowUp24}"
                                      Command="{Binding LoadTargetAdminConfigCommand}"
                                      IsEnabled="{Binding IsTargetConnected}"
                                      Appearance="Primary"
                                      Margin="0,10,0,0"
                                      HorizontalAlignment="Stretch"/>
                                      
                            <TextBlock Text="{Binding TargetDataStatus}"
                                      FontSize="12"
                                      Opacity="0.7"
                                      Margin="0,5,0,0"/>
                        </StackPanel>
                    </Grid>
                </ui:Card>
            </Grid>

            <!-- Admin Config Data Display -->
            <ui:Card Grid.Row="2" Margin="0,0,0,20">
                <Grid Margin="20,15">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <TextBlock Grid.Row="0" 
                              Text="Administrative Configuration Overview" 
                              FontSize="16" 
                              FontWeight="SemiBold"
                              Margin="0,0,0,15"/>
                    
                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <!-- Source Config Stats -->
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="Source Configuration" FontWeight="Medium" Margin="0,0,0,10"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                
                                <TextBlock Grid.Row="0" Grid.Column="0" Text="Roles:" FontSize="12"/>
                                <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding SourceRoles.Count}" FontSize="12" FontWeight="Medium"/>
                                
                                <TextBlock Grid.Row="1" Grid.Column="0" Text="Permissions:" FontSize="12"/>
                                <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding SourcePermissions.Count}" FontSize="12" FontWeight="Medium"/>
                                
                                <TextBlock Grid.Row="2" Grid.Column="0" Text="Folders:" FontSize="12"/>
                                <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding SourceFolders.Count}" FontSize="12" FontWeight="Medium"/>
                                
                                <TextBlock Grid.Row="3" Grid.Column="0" Text="Tags:" FontSize="12"/>
                                <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding SourceTags.Count}" FontSize="12" FontWeight="Medium"/>
                                
                                <TextBlock Grid.Row="4" Grid.Column="0" Text="Certificates:" FontSize="12"/>
                                <TextBlock Grid.Row="4" Grid.Column="1" Text="{Binding SourceCertificates.Count}" FontSize="12" FontWeight="Medium"/>
                                
                                <TextBlock Grid.Row="5" Grid.Column="0" Text="Custom Attributes:" FontSize="12"/>
                                <TextBlock Grid.Row="5" Grid.Column="1" Text="{Binding SourceCustomAttributes.Count}" FontSize="12" FontWeight="Medium"/>
                            </Grid>
                        </StackPanel>
                        
                        <ui:SymbolIcon Grid.Column="1" 
                                      Symbol="ArrowRight24" 
                                      FontSize="20"
                                      VerticalAlignment="Center"
                                      Margin="20,0"
                                      Opacity="0.6"/>
                        
                        <!-- Target Config Stats -->
                        <StackPanel Grid.Column="2">
                            <TextBlock Text="Target Configuration" FontWeight="Medium" Margin="0,0,0,10"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                
                                <TextBlock Grid.Row="0" Grid.Column="0" Text="Roles:" FontSize="12"/>
                                <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding TargetRoles.Count}" FontSize="12" FontWeight="Medium"/>
                                
                                <TextBlock Grid.Row="1" Grid.Column="0" Text="Permissions:" FontSize="12"/>
                                <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding TargetPermissions.Count}" FontSize="12" FontWeight="Medium"/>
                                
                                <TextBlock Grid.Row="2" Grid.Column="0" Text="Folders:" FontSize="12"/>
                                <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding TargetFolders.Count}" FontSize="12" FontWeight="Medium"/>
                                
                                <TextBlock Grid.Row="3" Grid.Column="0" Text="Tags:" FontSize="12"/>
                                <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding TargetTags.Count}" FontSize="12" FontWeight="Medium"/>
                                
                                <TextBlock Grid.Row="4" Grid.Column="0" Text="Certificates:" FontSize="12"/>
                                <TextBlock Grid.Row="4" Grid.Column="1" Text="{Binding TargetCertificates.Count}" FontSize="12" FontWeight="Medium"/>
                                
                                <TextBlock Grid.Row="5" Grid.Column="0" Text="Custom Attributes:" FontSize="12"/>
                                <TextBlock Grid.Row="5" Grid.Column="1" Text="{Binding TargetCustomAttributes.Count}" FontSize="12" FontWeight="Medium"/>
                            </Grid>
                        </StackPanel>
                    </Grid>
                </Grid>
            </ui:Card>

            <!-- Migration Configuration -->
            <ui:Card Grid.Row="3" Margin="0,0,0,20">
                <Grid Margin="20,15">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <TextBlock Grid.Row="0" 
                              Text="Migration Configuration" 
                              FontSize="16" 
                              FontWeight="SemiBold"
                              Margin="0,0,0,15"/>
                    
                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <!-- Migration Options -->
                        <StackPanel Grid.Column="0" Margin="0,0,20,0">
                            <TextBlock Text="Migration Options" FontWeight="Medium" Margin="0,0,0,10"/>
                            
                            <CheckBox Content="Migrate Roles" 
                                     IsChecked="{Binding MigrateRoles}"
                                     Margin="0,0,0,5"/>
                            
                            <CheckBox Content="Migrate Permissions" 
                                     IsChecked="{Binding MigratePermissions}"
                                     Margin="0,0,0,5"/>
                            
                            <CheckBox Content="Migrate Folders" 
                                     IsChecked="{Binding MigrateFolders}"
                                     Margin="0,0,0,5"/>
                            
                            <CheckBox Content="Migrate Tags" 
                                     IsChecked="{Binding MigrateTags}"
                                     Margin="0,0,0,5"/>
                            
                            <CheckBox Content="Migrate Certificates" 
                                     IsChecked="{Binding MigrateCertificates}"
                                     Margin="0,0,0,5"/>
                            
                            <CheckBox Content="Migrate Custom Attributes" 
                                     IsChecked="{Binding MigrateCustomAttributes}"
                                     Margin="0,0,0,5"/>
                            
                            <CheckBox Content="Validation only (no changes)" 
                                     IsChecked="{Binding ValidateOnly}"
                                     Margin="0,0,0,5"/>
                        </StackPanel>
                        
                        <!-- Migration Actions -->
                        <StackPanel Grid.Column="1">
                            <TextBlock Text="Migration Actions" FontWeight="Medium" Margin="0,0,0,10"/>
                            
                            <ui:Button Content="Validate Migration"
                                      Icon="{ui:SymbolIcon CheckmarkCircle24}"
                                      Command="{Binding ValidateMigrationCommand}"
                                      IsEnabled="{Binding CanValidateMigration}"
                                      Margin="0,0,0,10"
                                      HorizontalAlignment="Stretch"/>
                            
                            <ui:Button Content="Start Admin Config Migration"
                                      Icon="{ui:SymbolIcon Play24}"
                                      Command="{Binding StartMigrationCommand}"
                                      IsEnabled="{Binding CanStartMigration}"
                                      Appearance="Primary"
                                      HorizontalAlignment="Stretch"/>
                            
                            <ProgressBar Value="{Binding MigrationProgress}"
                                        Maximum="100"
                                        Height="6"
                                        Margin="0,15,0,5"
                                        Visibility="{Binding IsMigrationInProgress, Converter={StaticResource BoolToVisibilityConverter}}"/>
                            
                            <TextBlock Text="{Binding MigrationStatus}"
                                      FontSize="12"
                                      TextWrapping="Wrap"
                                      Margin="0,5,0,0"/>
                        </StackPanel>
                    </Grid>
                </Grid>
            </ui:Card>

            <!-- Activity Log -->
            <ui:Card Grid.Row="4">
                <Grid Margin="20,15">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <TextBlock Grid.Row="0" 
                              Text="Activity Log" 
                              FontSize="16" 
                              FontWeight="SemiBold"
                              Margin="0,0,0,15"/>
                    
                    <ScrollViewer Grid.Row="1"
                                 Height="300" 
                                 VerticalScrollBarVisibility="Auto"
                                 HorizontalScrollBarVisibility="Auto"
                                 PanningMode="Both"
                                 CanContentScroll="False">
                        <TextBox Text="{Binding ActivityLog}"
                                IsReadOnly="True"
                                Background="Transparent"
                                BorderThickness="0"
                                TextWrapping="Wrap"
                                FontFamily="Consolas"
                                FontSize="12"/>
                    </ScrollViewer>
                </Grid>
            </ui:Card>
        </Grid>
    </ScrollViewer>
</Page>