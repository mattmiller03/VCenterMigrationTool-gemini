<?xml version="1.0" encoding="utf-8"?>
<Page x:Class="VCenterMigrationTool.Views.Pages.VCenterMigrationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:helpers="clr-namespace:VCenterMigrationTool.Helpers"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      mc:Ignorable="d"
      d:DesignHeight="800" d:DesignWidth="1200">

    <Page.Resources>
        <helpers:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <helpers:NullToBooleanConverter x:Key="NullToBooleanConverter"/>
    </Page.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*" MinHeight="300"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Grid Grid.Row="0" Margin="0,0,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Text="vCenter Objects Migration" 
                               FontSize="28" 
                               FontWeight="SemiBold"/>
                    <TextBlock Text="Migrate roles, permissions, folders, tags, and other vCenter objects" 
                               Opacity="0.7"
                               FontSize="14"
                               Margin="0,5,0,0"/>
                </StackPanel>

                <ui:Button Grid.Column="1" 
                          Content="Start Migration" 
                          Icon="{ui:SymbolIcon Play24}"
                          Command="{Binding ViewModel.StartMigrationCommand}"
                          Appearance="Primary"
                          VerticalAlignment="Center"
                          Padding="20,10"
                          FontSize="14"/>
            </Grid>

            <!-- Migration Options -->
            <ui:Card Grid.Row="1" Margin="0,0,0,15">
                <Grid Margin="20,15">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" 
                              Text="Migration Options" 
                              FontSize="16" 
                              FontWeight="SemiBold"
                              Margin="0,0,0,15"/>

                    <WrapPanel Grid.Row="1" Orientation="Horizontal">
                        <CheckBox IsChecked="{Binding ViewModel.MigrateRoles}" 
                                 Margin="0,0,30,10">
                            <StackPanel Orientation="Horizontal">
                                <ui:SymbolIcon Symbol="People24" Margin="0,0,8,0"/>
                                <TextBlock Text="Roles &amp; Permissions" VerticalAlignment="Center"/>
                            </StackPanel>
                        </CheckBox>

                        <CheckBox IsChecked="{Binding ViewModel.MigrateFolders}" 
                                 Margin="0,0,30,10">
                            <StackPanel Orientation="Horizontal">
                                <ui:SymbolIcon Symbol="Folder24" Margin="0,0,8,0"/>
                                <TextBlock Text="Folder Structure" VerticalAlignment="Center"/>
                            </StackPanel>
                        </CheckBox>

                        <CheckBox IsChecked="{Binding ViewModel.MigrateTags}" 
                                 Margin="0,0,30,10">
                            <StackPanel Orientation="Horizontal">
                                <ui:SymbolIcon Symbol="Tag24" Margin="0,0,8,0"/>
                                <TextBlock Text="Tags &amp; Categories" VerticalAlignment="Center"/>
                            </StackPanel>
                        </CheckBox>
                    </WrapPanel>
                </Grid>
            </ui:Card>

            <!-- Cluster Selection -->
            <ui:Card Grid.Row="2" Margin="0,0,0,15">
                <Grid Margin="20,15">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" 
                              Text="Source Cluster Selection" 
                              FontSize="16" 
                              FontWeight="SemiBold"
                              Margin="0,0,0,10"/>

                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" MaxWidth="400"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <ComboBox Grid.Column="0"
                                 ItemsSource="{Binding ViewModel.SourceClusters}"
                                 SelectedItem="{Binding ViewModel.SelectedSourceCluster}"
                                 MinHeight="35">
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock>
                                        <TextBlock.Text>
                                            <MultiBinding StringFormat="{}{0} ({1} hosts)">
                                                <Binding Path="Name"/>
                                                <Binding Path="HostCount"/>
                                            </MultiBinding>
                                        </TextBlock.Text>
                                    </TextBlock>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>

                        <TextBlock Grid.Column="1" 
                                  Text="→" 
                                  FontSize="20"
                                  VerticalAlignment="Center"
                                  Margin="20,0"/>

                        <Border Grid.Column="2" 
                               BorderBrush="{DynamicResource ControlElevationBorderBrush}"
                               BorderThickness="1"
                               CornerRadius="4"
                               Background="{DynamicResource ControlFillColorSecondaryBrush}"
                               MinHeight="35">
                            <TextBlock Text="Target: Same cluster name will be used" 
                                      VerticalAlignment="Center"
                                      Margin="10,0"
                                      Opacity="0.7"/>
                        </Border>
                    </Grid>
                </Grid>
            </ui:Card>

            <!-- Cluster Items -->
            <ui:Card Grid.Row="3" Margin="0,0,0,15">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Header -->
                    <Border Grid.Row="0" 
                           Background="{DynamicResource ControlFillColorSecondaryBrush}"
                           Padding="20,12">
                        <Grid>
                            <TextBlock Text="Cluster Objects to Migrate" 
                                      FontSize="16" 
                                      FontWeight="SemiBold"/>
                            <TextBlock Text="{Binding ViewModel.ClusterItems.Count, StringFormat='{}{0} items'}"
                                      HorizontalAlignment="Right"
                                      Opacity="0.7"/>
                        </Grid>
                    </Border>

                    <!-- Loading indicator -->
                    <StackPanel Grid.Row="1" 
                               Visibility="{Binding ViewModel.IsLoadingClusterItems, Converter={StaticResource BoolToVisibilityConverter}}"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               Margin="0,50">
                        <ui:ProgressRing IsIndeterminate="True" Width="40" Height="40"/>
                        <TextBlock Text="Loading cluster items..." 
                                  Margin="0,10,0,0"
                                  Opacity="0.7"/>
                    </StackPanel>

                    <!-- Items List -->
                    <ScrollViewer Grid.Row="1" 
                                 VerticalScrollBarVisibility="Auto"
                                 MaxHeight="250"
                                 Margin="0,1,0,0">
                        <ItemsControl ItemsSource="{Binding ViewModel.ClusterItems}"
                                     Margin="20,15">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border BorderBrush="{DynamicResource ControlElevationBorderBrush}"
                                           BorderThickness="0,0,0,1"
                                           Padding="0,8">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <CheckBox Grid.Column="0" 
                                                     IsChecked="{Binding IsSelected}"
                                                     VerticalAlignment="Center"
                                                     Margin="0,0,15,0"/>

                                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                                <TextBlock Text="{Binding Name}" 
                                                          FontWeight="Medium"/>
                                                <TextBlock Text="{Binding Type}" 
                                                          FontSize="12"
                                                          Opacity="0.6"/>
                                            </StackPanel>

                                            <TextBlock Grid.Column="2" 
                                                      Text="{Binding Status}"
                                                      VerticalAlignment="Center"
                                                      Margin="15,0"
                                                      FontSize="12"/>

                                            <ui:Badge Grid.Column="3" 
                                                     Content="{Binding ItemCount}"
                                                     Appearance="Secondary"
                                                     VerticalAlignment="Center"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Grid>
            </ui:Card>

            <!-- Migration Progress -->
            <ui:Card Grid.Row="4" 
                    Margin="0,0,0,15"
                    Visibility="{Binding ViewModel.IsMigrating, Converter={StaticResource BoolToVisibilityConverter}}">
                <Grid Margin="20,15">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" 
                              Text="Migration Progress" 
                              FontSize="16" 
                              FontWeight="SemiBold"
                              Margin="0,0,0,10"/>

                    <ProgressBar Grid.Row="1" 
                                   Value="{Binding ViewModel.OverallProgress}"
                                   Maximum="100"
                                   Height="8"
                                   Margin="0,0,0,10"/>

                    <TextBlock Grid.Row="2" 
                              Text="{Binding ViewModel.CurrentTaskDetails}"
                              FontSize="13"
                              Margin="0,0,0,10"/>

                    <!-- Task List -->
                    <ItemsControl Grid.Row="3" 
                                 ItemsSource="{Binding ViewModel.MigrationTasks}"
                                 MaxHeight="150">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Grid Margin="0,2">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <ui:SymbolIcon Grid.Column="0" 
                                                  Symbol="{Binding StatusIcon}"
                                                  Margin="0,0,10,0"/>

                                    <TextBlock Grid.Column="1" 
                                              Text="{Binding Description}"
                                              VerticalAlignment="Center"/>

                                    <TextBlock Grid.Column="2" 
                                              Text="{Binding ElapsedTime}"
                                              FontSize="11"
                                              Opacity="0.6"/>
                                </Grid>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </Grid>
            </ui:Card>

            <!-- Status Bar -->
            <ui:Card Grid.Row="5">
                <Grid Margin="15,12">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <ui:SymbolIcon Symbol="Info24" 
                                  Margin="0,0,12,0"
                                  VerticalAlignment="Center"/>

                    <TextBlock Grid.Column="1" 
                              Text="{Binding ViewModel.OverallStatus}"
                              VerticalAlignment="Center"
                              TextWrapping="Wrap"/>
                </Grid>
            </ui:Card>
        </Grid>
    </ScrollViewer>
</Page>